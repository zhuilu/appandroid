<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14">

            <TextView
                android:id="@+id/tv_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text=""
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_tag_1"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text=""
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_tag_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_tag_2"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text=""
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_13" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:background="#ffececec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_19"
            android:text="视频介绍"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_14"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_19"
            android:text="视频配图"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14">


        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="评论"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:layout_gravity="bottom"
                android:background="#ffececec" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
