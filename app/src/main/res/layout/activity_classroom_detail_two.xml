<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_and_right">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="课堂详情"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />

        <RelativeLayout
            android:id="@+id/rlayout_share_top"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/padding_left_and_right"
                app:srcCompat="@mipmap/zhuan_intransit" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_below="@+id/tool_bar"
        android:background="#FFE5E5E5" />

    <LinearLayout
        android:id="@+id/rlayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ycoop_lxwordRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47">

            <RelativeLayout
                android:id="@+id/rlayout_good"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_25">

                <ImageView
                    android:id="@+id/img_good"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_9" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayout_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_toRightOf="@+id/rlayout_good"
                android:paddingRight="@dimen/dp_10">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@mipmap/video_share" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llayout_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_toRightOf="@+id/rlayout_share"
                android:background="@drawable/bg_comment_classroom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        app:srcCompat="@mipmap/tell_cion_two" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="评论"
                        android:textColor="@color/_999"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ycoop_sendRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:background="#ffe3e3e3" />

            <TextView
                android:id="@+id/bleaveword_sendtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="发布"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_13" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toLeftOf="@+id/bleaveword_sendtv"
                android:background="@drawable/bg_shape_coop_edit">


                <EditText
                    android:id="@+id/mcoop_sendEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@null"
                    android:hint="发布评论"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/_333"
                    android:textColorHint="@color/_999"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlayout_bottom"
        android:layout_below="@+id/view_title">

        <com.xinniu.android.qiqueqiao.widget.CustomRefreshHeader2
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_20"></com.xinniu.android.qiqueqiao.widget.CustomRefreshHeader2>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/messageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_14"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:singleLine="false"
                    android:text="以租代买，一场不剁手的狂欢"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_14">

                    <TextView
                        android:id="@+id/tv_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_toRightOf="@+id/tv_tag_1"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_23"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_toRightOf="@+id/tv_tag_2"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_2_5"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="#E5E5E5" />


                <LinearLayout
                    android:id="@+id/llayout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text=""
                        android:textColor="@color/_999999"
                        android:textSize="@dimen/sp_12" />

                    <com.github.lzyzsd.jsbridge.BridgeWebView
                        android:id="@+id/mbridgeWeb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_14" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#fff8f9f9" />

                <LinearLayout
                    android:id="@+id/llayout_resource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_14"
                        android:text="推荐资源"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:background="#ffececec" />

                    <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                        android:id="@+id/mcompany_resource_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#fff8f9f9" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/coop_lwordRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/mcoop_detail_lword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="评论 · 0"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_alignParentBottom="true"
                        android:background="#E5E5E5" />


                </RelativeLayout>

                <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                    android:id="@+id/mcoop_comment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>

                <RelativeLayout
                    android:id="@+id/rl_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/detail_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/detail_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="还没有人评论，快来抢沙发吧..."
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/bleavewordx_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/bg_leaveword_sp"
                        android:text="评论"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:src="@drawable/loaddown_more" />
        </com.scwang.smartrefresh.layout.footer.ClassicsFooter>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>
