<?xml version="1.0" encoding="utf-8"?>
<com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_82"
            android:layout_height="match_parent"

            android:background="#FE4646"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_mine_control_1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/check"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"

                android:background="@drawable/select_greets"
                android:button="@null"
                android:checked="true"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_toRightOf="@+id/check"
                android:button="@mipmap/comtus_tags"
                android:checked="false"
                android:clickable="false"
                android:gravity="top"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:text="备注:哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_15"
                android:background="@color/transparent"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#ffe4e4e4" />
    </LinearLayout>
</com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout>
