<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mcompany_info_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableOverScrollBounce="true"

        >

        <com.xinniu.android.qiqueqiao.customs.MyScrollView
            android:id="@+id/company_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/companyheadRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/company_headRl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_145">

                        <ImageView
                            android:id="@+id/mcompany_bgimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:scaleType="centerCrop" />

                        <RelativeLayout
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_company_head">

                            <com.xinniu.android.qiqueqiao.utils.RoundImageView
                                android:id="@+id/mcompany_headicon"
                                android:layout_width="@dimen/dp_64"
                                android:layout_height="@dimen/dp_64"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@mipmap/default1_icon" />


                        </RelativeLayout>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mcompany_typeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_headRl"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_company_type"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_11" />

                    <TextView
                        android:id="@+id/mcompany_brandname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mcompany_typeTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mcompany_companyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mcompany_brandname"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColor="@color/_999"
                        android:textSize="@dimen/sp_14" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:layout_below="@+id/mcompany_companyname"
                        android:background="@color/bg_gray" />

                    <RelativeLayout
                        android:id="@+id/bussinessRl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_below="@+id/line1">

                        <View
                            android:id="@+id/imgv"
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_18"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/imgv"
                            android:text="公司信息"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_18" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_below="@+id/bussinessRl"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:id="@+id/companyinfoRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2">

                        <TextView
                            android:id="@+id/tvbussinessinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_17"
                            android:text="公司简介"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/mcompany_introducetv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvbussinessinfo"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_20"
                            android:maxLines="5"
                            android:textColor="@color/_666"
                            android:textSize="@dimen/sp_15"

                            />

                        <RelativeLayout
                            android:id="@+id/ycompany_intromoreRl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_58"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@mipmap/vague_bg">

                            <ImageView
                                android:id="@+id/bcompany_intromoreImg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@mipmap/pulldown" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_below="@+id/companyinfoRl"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:id="@+id/mcompany_netRl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_78"
                        android:layout_below="@+id/line3">

                        <TextView
                            android:id="@+id/tvbussinessnet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="公司网址"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/mcompany_nettv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvbussinessnet"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_8"
                            android:textColor="@color/_666"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_20"
                            app:srcCompat="@mipmap/goto_new" />


                    </RelativeLayout>

                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_below="@+id/mcompany_netRl"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/line_color" />

                    <RelativeLayout
                        android:id="@+id/memberRl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_below="@+id/line4">

                        <TextView
                            android:id="@+id/tvbussinessmember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_17"
                            android:text="公司成员"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_17" />

                        <ImageView
                            android:id="@+id/info_pointgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginRight="@dimen/dp_20"
                            app:srcCompat="@mipmap/goto_new" />


                        <TextView
                            android:id="@+id/bcompany_info_lookall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginRight="@dimen/dp_3"
                            android:layout_toLeftOf="@+id/info_pointgo"
                            android:text="查看全部"
                            android:textSize="@dimen/sp_12" />


                        <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                            android:id="@+id/mcompany_member_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_134"
                            android:layout_below="@+id/tvbussinessmember"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_10"

                            ></com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/servicell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/memberRl"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlayout_all_service"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50">

                            <View
                                android:id="@+id/imgv2"
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_18"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:background="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_toRightOf="@+id/imgv2"
                                android:text="公司服务"
                                android:textColor="@color/_333"
                                android:textSize="@dimen/sp_18" />

                            <ImageView
                                android:id="@+id/service_pointgo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_18"
                                android:layout_marginRight="@dimen/dp_20"
                                app:srcCompat="@mipmap/goto_new" />


                            <TextView
                                android:id="@+id/service_info_lookall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_18"
                                android:layout_marginRight="@dimen/dp_3"
                                android:layout_toLeftOf="@+id/service_pointgo"
                                android:text="查看全部"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_2_5"
                                android:layout_alignParentBottom="true"
                                android:background="@color/line_color" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/item_index"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.xinniu.android.qiqueqiao.utils.RoundImageView
                                android:id="@+id/mcoop_detail_companyImg"
                                android:layout_width="@dimen/dp_96"
                                android:layout_height="@dimen/dp_96"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:scaleType="fitXY"
                                android:src="@mipmap/default1_icon" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_19"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/dp_1"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/_444"
                                android:textSize="@dimen/sp_13"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_title"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_tag_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/bg_service_biaoqian"
                                    android:includeFontPadding="false"
                                    android:padding="@dimen/dp_4"
                                    android:text=""
                                    android:textColor="@color/_555"
                                    android:textSize="@dimen/sp_11" />

                                <TextView
                                    android:id="@+id/tv_tag_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_8"
                                    android:background="@drawable/bg_service_biaoqian"
                                    android:includeFontPadding="false"
                                    android:padding="@dimen/dp_4"
                                    android:text=""
                                    android:textColor="@color/_555"
                                    android:textSize="@dimen/sp_11" />

                                <TextView
                                    android:id="@+id/tv_tag_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_8"
                                    android:background="@drawable/bg_service_biaoqian"
                                    android:includeFontPadding="false"
                                    android:padding="@dimen/dp_4"
                                    android:text=""
                                    android:textColor="@color/_555"
                                    android:textSize="@dimen/sp_11" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/mcoop_detail_companyImg"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_14"
                                android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:id="@+id/item_index_recycler_Fl"
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_27"
                                    android:layout_gravity="center_vertical">

                                    <com.xinniu.android.qiqueqiao.widget.CircleImageView
                                        android:id="@+id/item_index_recycler_img"
                                        android:layout_width="@dimen/dp_25"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_alignParentLeft="true"
                                        android:src="@mipmap/ic_launcher" />

                                    <ImageView
                                        android:id="@+id/index_new_isv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        app:srcCompat="@mipmap/head_is_v20_20"
                                        android:visibility="gone" />


                                </FrameLayout>

                                <TextView
                                    android:id="@+id/item_index_nameTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text=""
                                    android:textColor="#ff659fe2"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/item_index_position"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="#ffb2b6b8"
                                    android:textSize="@dimen/sp_12" />


                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/resourceRl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_below="@+id/servicell"
                        android:layout_marginTop="@dimen/dp_8">

                        <View
                            android:id="@+id/imgv1"
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_18"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/imgv1"
                            android:text="公司资源"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_2_5"
                            android:layout_alignParentBottom="true"
                            android:background="@color/line_color" />


                    </RelativeLayout>
                </RelativeLayout>

                <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                    android:id="@+id/mcompany_resource_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/companyheadRl">

                </com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>

                <RelativeLayout
                    android:id="@+id/mcompany_infoImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/companyheadRl"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_50"
                        android:drawableTop="@mipmap/perchthree"
                        android:gravity="center"
                        android:text="暂无合作信息"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_11" />

                </RelativeLayout>


            </RelativeLayout>

        </com.xinniu.android.qiqueqiao.customs.MyScrollView>

        <include layout="@layout/view_footview_loadmore" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/mcompany_titleRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:alpha="0"
        android:background="@color/white">


        <TextView
            android:id="@+id/mtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:text="企业主页"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/bfinishImg"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_32"
        android:alpha="1"
        app:srcCompat="@mipmap/arrow_left_white_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_14"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bshare"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:alpha="1"
            app:srcCompat="@mipmap/company_share" />

        <RelativeLayout
            android:id="@+id/yeditRl"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:visibility="gone">


            <ImageView
                android:id="@+id/bedit_companytv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/company_editor" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>