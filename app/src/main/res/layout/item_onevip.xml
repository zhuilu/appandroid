<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    >


    <RelativeLayout
        android:id="@+id/item_onevip_Rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:background="@drawable/bg_onevip"
        >
        <TextView
            android:id="@+id/item_onevip_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="12个月"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/tvItemMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/month"
            android:paddingTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_2"
            />



        <TextView
            android:id="@+id/item_vip_moneytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvItemMonth"
            android:layout_centerVertical="true"
            android:text="116.32/"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:minEms="2"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_one_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_vip_moneytv"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_onevip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000次沟通次数"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_alignLeft="@+id/item_onevip_month"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toLeftOf="@+id/item_one_y"
            android:gravity="left"
            />





    </RelativeLayout>



</LinearLayout>