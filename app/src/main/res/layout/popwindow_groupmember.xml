<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/bdomanagerTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:id="@+id/mmanagerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置为管理员"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />

    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:id="@+id/mmakeoverTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_1"
            android:text="转让群主"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:id="@+id/mbanned1Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="禁言1天"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:id="@+id/mbanned3Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="禁言3天"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:id="@+id/mnobannedTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="解除禁言"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:id="@+id/mdeleteTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="移除成员"
            android:textColor="@color/king_color"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="@color/line_color"
        />
    <RelativeLayout
        android:id="@+id/bcancelTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="取消"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>




</LinearLayout>