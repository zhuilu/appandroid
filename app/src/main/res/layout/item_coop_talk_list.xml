<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/item_coop_call"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"

        >
    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/item_index_recycler_img"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_centerVertical="true"
        />



    <TextView
        android:id="@+id/item_index_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_index_recycler_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="张飞"
        android:textSize="@dimen/sp_15"
        />
    <TextView
        android:id="@+id/coop_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刚刚活跃"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_9"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_index_nameTv"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/coop_detail_time"
        >

    <TextView
        android:id="@+id/item_index_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginRight="@dimen/dp_5"
        android:maxEms="15"
        />
    <ImageView
        android:id="@+id/coop_talk_list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="matrix"

        />

    </LinearLayout>

    </RelativeLayout>



</RelativeLayout>