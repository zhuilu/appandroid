<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_marginTop="@dimen/top_margin"
        android:id="@+id/tool_bar"
        >
        <RelativeLayout
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height"
            android:id="@+id/bt_finish">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron"
                />

        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:id="@+id/pertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_67"
        android:layout_centerHorizontal="true"
        android:text="完善群资料"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/percontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pertitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:text="认证填写群资料，吸引朋友加入你的群组"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_11"
        />
    <RelativeLayout
        android:id="@+id/perfectedRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_137"
        android:layout_below="@+id/percontent"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/bg_gray_F8"
        >
        <EditText
            android:id="@+id/mperfectEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:hint="请填写介绍,15到500字"
            android:textColorHint="@color/text_color_search"
            android:gravity="top|left"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_1"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/perCityRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/perfectedRl"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="群组地区"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_13"
            />
        <ImageView
            android:id="@+id/arrImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@mipmap/goto_new"
            />

        <TextView
            android:id="@+id/mgroupCityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="未选择"
            android:textSize="@dimen/sp_13"
            android:layout_toLeftOf="@+id/arrImg"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            />
        

    </RelativeLayout>


            <TextView
                android:id="@+id/bnextgoTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/perCityRl"
                android:background="@drawable/bg_next_shape"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_100"
                />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>