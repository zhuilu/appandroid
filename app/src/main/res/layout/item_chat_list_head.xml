<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_chat_headRl"
    >
    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/left_head_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"/>
    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/right_head_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/left_head_img_iv"
        android:layout_toLeftOf="@+id/right_head_img_iv"
        android:id="@+id/root_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:id="@+id/head_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#999999"
            android:textSize="11sp"
            android:visibility="gone"/>
        <android.support.v7.widget.CardView
            android:id="@+id/itemRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/dp_4"
            card_view:cardElevation="@dimen/dp_2"
            >

            <RelativeLayout
                android:id="@+id/card_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_20"
                    >
                    <TextView
                        android:id="@+id/listhead_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/text_color_1"
                        android:maxEms="40"
                        android:ellipsize="end"
                        />


                </LinearLayout>

                <FrameLayout
                    android:id="@+id/imgLogo_x"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_34"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    >


                <com.xinniu.android.qiqueqiao.widget.CircleImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"

                    android:src="@mipmap/ic_launcher"
                    />
                    <ImageView
                        android:id="@+id/imgLogo_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:srcCompat="@mipmap/head_is_v20_20"
                        android:layout_gravity="bottom|right"
                        android:scaleType="matrix"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_34"
                    android:orientation="horizontal"
                    android:layout_below="@+id/view1"
                    android:layout_toRightOf="@+id/imgLogo_x"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:paddingBottom="1dp"/>

                    <TextView
                        android:id="@+id/tvInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:maxEms="8"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:id="@+id/vip_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_gravity="center"
                        android:scaleType="matrix"
                        />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>