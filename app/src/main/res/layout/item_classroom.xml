<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_182"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:ellipsize="end"
        android:singleLine="false"
        android:lineSpacingExtra="@dimen/dp_3"
        android:maxLines="2"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_14"
        android:background="#ffececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_below="@+id/view"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14">

        <RelativeLayout
            android:id="@+id/rlayout_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                app:srcCompat="@mipmap/message_gray" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:text=""
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_9" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayout_good"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_toLeftOf="@+id/rlayout_message">

            <ImageView
                android:id="@+id/img_good"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_centerVertical="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:text=""
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_9" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:background="@drawable/bg_vedio_tag"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="5"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="#ff4b96f3"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_toRightOf="@+id/tv_tag_1"

            android:background="@drawable/bg_vedio_tag"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="5"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="#ff4b96f3"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_toRightOf="@+id/tv_tag_2"

            android:background="@drawable/bg_vedio_tag"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="5"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="#ff4b96f3"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</RelativeLayout>