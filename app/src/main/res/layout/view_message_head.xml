<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/is_push"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/white"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_shadow_vip_sd">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="开启推送通知"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notice"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="第一时间接收聊天信息、系统消息"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <TextView
                android:id="@+id/bopen_push"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/head_goto_open"
                android:gravity="center"
                android:text="开启"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/connect_head_Rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/connect_icon"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center"
                    android:text="人脉"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shape_red_point"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />


            </FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/system_head_Rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/system_msg_icon"
                    android:drawablePadding="@dimen/dp_13"
                    android:text="系统消息"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/view_headred_point"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shape_red_point"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />


            </FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inform_head_Rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/hudong_new_icon"
                    android:drawablePadding="@dimen/dp_13"
                    android:text="互动通知"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/view_interact_point"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shape_red_point"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circle_head_Rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawableTop="@mipmap/communication_record"
                    android:drawablePadding="@dimen/dp_13"
                    android:text="沟通记录"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/view_headr_point"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="top|right"
                    android:background="@drawable/shape_red_point"
                    android:scaleType="centerCrop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />


            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/bg_gray" />


</LinearLayout>