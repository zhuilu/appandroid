<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/mshareWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@mipmap/coop_two_top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/coop_two_centre">

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@mipmap/coop_two_bottom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_77"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_65"
                    android:background="@drawable/bg_coopdetail_two"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_9"
                        android:background="@drawable/bg_coopdetail_three"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_9"
                            android:layout_marginRight="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_9"
                            android:background="@color/white"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/ll_mine_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="@dimen/dp_62"
                                    android:layout_height="@dimen/dp_62"
                                    android:layout_marginLeft="@dimen/dp_14"
                                    android:layout_marginRight="@dimen/dp_14">


                                    <com.xinniu.android.qiqueqiao.widget.CircleImageView
                                        android:id="@+id/image_head"
                                        android:layout_width="@dimen/dp_60"
                                        android:layout_height="@dimen/dp_60"
                                        android:src="@mipmap/head_new_icon" />

                                    <ImageView
                                        android:id="@+id/mimage_isv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|bottom"
                                        android:src="@mipmap/head_is_v56_56"
                                        android:visibility="visible" />


                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_mine_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginRight="@dimen/dp_10"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            android:text=""
                                            android:textColor="@color/_333"
                                            android:textSize="@dimen/sp_19"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:id="@+id/mine_vipImg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical" />


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_mine_position"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:text=""
                                        android:textColor="@color/_333"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_biaoyu_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_13"
                                android:text="正在企鹊桥上寻找商务合作"
                                android:textColor="#ff3e64b9"
                                android:textSize="@dimen/sp_16" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_2_5"
                                android:layout_marginTop="@dimen/dp_16"
                                android:background="#ffececec" />


                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginRight="@dimen/dp_15"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="#ff333333"
                                android:textSize="@dimen/sp_18" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@mipmap/mask_one" />


                            <TextView
                                android:id="@+id/moffer_titletv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:textColor="#ff444444"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout
                                android:id="@+id/coop_moffer_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_9"
                                android:layout_marginRight="@dimen/dp_11"
                                android:visibility="gone"

                                >

                            </com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcy_offer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10" />

                            <TextView
                                android:id="@+id/coop_moffer_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_15"
                                android:ellipsize="end"
                                android:lines="1"
                                android:text=""
                                android:textColor="#ff444444"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/coop_moffer_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_19"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:lineSpacingExtra="@dimen/sp_8"
                                android:textColor="@color/_333"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/sp_15" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@mipmap/mask_one" />

                            <RelativeLayout
                                android:id="@+id/rlayout_bottom_bg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginTop="@dimen/dp_37"
                                    android:text="【长按识别二维码】"
                                    android:textColor="#ff444444"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_biaoyu_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:text="立即查看，了解合作详情"
                                    android:textColor="#ff3e64b9"
                                    android:textSize="@dimen/sp_14" />

                                <ImageView
                                    android:id="@+id/img_ma"
                                    android:layout_width="@dimen/dp_91"
                                    android:layout_height="@dimen/dp_91"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:layout_marginRight="@dimen/dp_25"
                                    android:layout_marginBottom="@dimen/dp_12"
                                    android:src="@color/gray_light" />


                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:src="@mipmap/bottom_biaoyu_3" />
            </FrameLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
