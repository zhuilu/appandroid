<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付详情"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_below="@+id/tool_bar"
        android:background="#ffececec" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您已支付"
        android:textColor="@color/_333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_49"
        android:textSize="@dimen/sp_13"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="￥"
            android:gravity="bottom"
            android:textColor="@color/_333"
            android:layout_marginBottom="@dimen/dp_3"
            android:textSize="@dimen/sp_22" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="19880"
            android:textStyle="bold"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_34" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请等待系统确认到账情况"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/_777"
        android:textSize="@dimen/sp_13"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#ffe1e1e1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_63"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"

            android:textColor="@color/_777"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对公转账"
            android:textColor="@color/_333"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_13"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转账截图"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_16"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"/>
</LinearLayout>
