                    <ImageView
                        android:id="@+id/img_logo_3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_12"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_19"
