                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_12"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_19"
                            app:srcCompat="@mipmap/img_vip_new" />

                        <TextView
                            android:id="@+id/tv_number_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_logo_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="100次沟通权限"
                            android:textColor="@color/color_aaaaaa"
                            android:textSize="@dimen/sp_12" />


                        <TextView
                            android:id="@+id/tv_origin_price"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_19"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_1"
                            android:gravity="top|center_horizontal"
                            android:includeFontPadding="false"
                            android:text="原价 298元/月"
                            android:textColor="@color/color_aaaaaa"
                            android:textSize="@dimen/sp_10" />

                        <TextView
                            android:id="@+id/tv_price_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tv_origin_price"
                            android:layout_centerHorizontal="true"
                            android:includeFontPadding="false"
                            android:text="98元/月"
                            android:textColor="#ffde6654"
                            android:textSize="@dimen/sp_17" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_vip_new"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:text="倒计时6天22小时"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_10" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlayout_vip"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_108"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_vip"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_logo_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_12"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_19"
                        app:srcCompat="@mipmap/img_vip" />

                    <TextView
                        android:id="@+id/tv_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_logo_2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_13"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_17"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#ffa6a6a6"
