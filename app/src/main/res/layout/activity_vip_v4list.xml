                    <TextView
                        android:id="@+id/tv_price_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_logo_3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_13"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_17"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#ffa6a6a6"
                        android:textSize="@dimen/sp_11" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_company_vip"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_108"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_vip_company"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_logo_5"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_12"
