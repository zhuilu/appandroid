                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/untell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="@string/untell_text"
                        android:textColor="@color/_999999"
                        android:textSize="@dimen/sp_11" />

                    <TextView
                        android:id="@+id/thetimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/untell_text"
                        android:layout_alignRight="@+id/untell_text"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:gravity="bottom"
                        android:text="@string/times"
                        android:textColor="@color/text_color_16"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/muntelltimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/untell_text"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_1"
                        android:layout_toLeftOf="@+id/thetimes"
                        android:gravity="bottom"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/un_timesRl"
                    android:layout_toRightOf="@+id/vip_view_headfl">

                    <TextView
                        android:id="@+id/mvip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="哈哈"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/dp_15" />

                    <ImageView
                        android:id="@+id/company_vip_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_toRightOf="@+id/mvip_name"
                        android:scaleType="matrix"
                        app:srcCompat="@mipmap/vip_new_icon_company"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/mis_vip_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_toRightOf="@+id/company_vip_img"
                        android:paddingTop="@dimen/dp_2"
