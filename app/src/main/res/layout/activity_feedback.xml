<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mpublish_titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="建议反馈"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_14"
            android:text="提交"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:background="#ffececec" />

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_117"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:background="@null"
        android:gravity="top"
        android:hint="请简要说明您遇到的问题或对产品的建议，我们将为您不断改进~"
        android:lineSpacingExtra="5dp"
        android:maxLength="200"
        android:textColor="@color/_333"
        android:textColorHint="#ffaaaaaa"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_19"
        android:text="0/200"
        android:textColor="#ffcccccc"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_19"
        android:background="#ffececec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_13"
        android:text="添加图片"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_publish_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_14"></androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_19"
        android:visibility="gone"
        android:background="#ffececec" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号，方便我们与您取得联系"
        android:textColorHint="#ffaaaaaa"
        android:background="@null"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_13"
        android:maxLength="11"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_13"
        android:inputType="phone"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_14"
        />
    </LinearLayout>
</LinearLayout>
