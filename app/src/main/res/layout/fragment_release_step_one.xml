<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="供和求可任选其一填写，但强烈建议都填写。"
        android:gravity="center"
        android:textColor="#999999"
        android:textSize="14sp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/offer_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我提供"
            android:padding="5dp"
            android:background="@drawable/selector_release_step_one"
            android:textColor="@drawable/selector_release_step_one_text"/>
        <TextView
            android:id="@+id/need_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我需要"
            android:padding="5dp"
            android:background="@drawable/selector_release_step_one"
            android:textColor="@drawable/selector_release_step_one_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F8F8"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leftListView"
            android:layout_width="@dimen/dp_94"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:background="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rightListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_toRightOf="@+id/leftListView"
            android:background="#F8F8F8"
            android:paddingRight="16dp"
            android:scrollbars="none"
            android:paddingLeft="16dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/common_bg2"
        android:gravity="center"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>