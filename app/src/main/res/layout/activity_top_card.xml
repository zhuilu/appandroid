<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_gray_F8">


    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购买刷新卡"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15"

            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tool_bar"
        android:background="@color/white"
        >


    <ImageView
        android:layout_width="@dimen/dp_201"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@id/tool_bar"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/top_perch"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_gravity="center"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="刷新卡"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_14"
            android:text="合作信息一键刷新置顶，加速获取合作伙伴"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/_999"
            android:layout_marginBottom="@dimen/dp_25"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@color/bg_gray_F8"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71">
            
            <TextView
                android:id="@+id/mtop_titleonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableLeft="@mipmap/refrsh_card"
                android:text="刷新卡"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_color_1"
                />

            <TextView
                android:id="@+id/mtop_pricetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/bg_color_red_DE6654"
                />

            <TextView
                android:id="@+id/mtop_infotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mtop_pricetv"
                android:textColor="@color/text_color_search"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:text="5元/张"
                android:visibility="gone"
                />




            <TextView
                android:id="@+id/btop_buyonetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"
                android:text="购买"
                android:background="@drawable/shape_top_buy"
                />
            
            
            
            
            
            


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71">
            <TextView
                android:id="@+id/mtop_titletwotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableLeft="@mipmap/refrsh_card"
                android:text="刷新卡"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_color_1"
                />

            <TextView
                android:id="@+id/mtop_pricetwotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/bg_color_red_DE6654"
                />

            <TextView
                android:id="@+id/mtop_twoinfotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mtop_pricetwotv"
                android:textColor="@color/text_color_search"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:text="5元/张"
                />




            <TextView
                android:id="@+id/btop_buytwotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"
                android:text="购买"
                android:background="@drawable/shape_top_buy"
                />




        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71"
            >
            <TextView
                android:id="@+id/mtop_titlethreetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableLeft="@mipmap/refrsh_card"
                android:text="刷新卡"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_color_1"
                />

            <TextView
                android:id="@+id/mtop_pricethreetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/bg_color_red_DE6654"
                />

            <TextView
                android:id="@+id/mtop_threeinfotv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mtop_pricethreetv"
                android:textColor="@color/text_color_search"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:text="5元/张"
                />




            <TextView
                android:id="@+id/btop_buythreetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"
                android:text="购买"
                android:background="@drawable/shape_top_buy"
                />




        </RelativeLayout>


    </LinearLayout>
    
    






</RelativeLayout>