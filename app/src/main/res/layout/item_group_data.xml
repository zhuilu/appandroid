<?xml version="1.0" encoding="utf-8"?>
<com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_58"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_update_group_name"
            android:layout_width="@dimen/dp_82"
            android:layout_height="match_parent"
            android:background="#FFCCCCCC"
            android:gravity="center"
            android:text="修改组名"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_update_group"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_58"
            android:background="#FFCCCCCC"
            android:gravity="center"

            android:text="修改分组"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_58"
            android:background="#FE4646"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_lx_headimg"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_34"
                android:src="@mipmap/head_new_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toRightOf="@+id/item_lx_headimg">
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/lx_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="服务经理"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/item_index_vipImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:scaleType="matrix" />
                </LinearLayout>
                <TextView
                    android:id="@+id/lx_positiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/text_color_AA"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_34"
            android:background="#ffececec" />
    </RelativeLayout>

</com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout>

