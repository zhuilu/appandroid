<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_system_content"
    android:layout_marginTop="@dimen/dp_6"
    android:id="@+id/item_system_Rl"
    >
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-02-02 09:30"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/_999999"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加V申请"
        android:layout_below="@id/time"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_color_1"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <RelativeLayout
        android:id="@+id/system_msgRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginBottom="@dimen/dp_7"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/ysystemRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/mheadImg"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/ic_default_head"
                />
            <RelativeLayout
                android:id="@+id/contentRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mheadImg"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                >


                <TextView
                    android:id="@+id/mgroupcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"
                    />

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/msystemgroupRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/ysystemRl"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_80"
            >
            <TextView
                android:id="@+id/bsystem_agreeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:background="@drawable/bg_system_agree"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/bsystem_refuseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_system_refuse"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bsystem_agreeTv"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/msystem_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/_999"

                />





        </RelativeLayout>








    </RelativeLayout>









</RelativeLayout>