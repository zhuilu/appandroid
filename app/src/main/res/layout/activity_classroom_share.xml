<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd7d7d7">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

    <LinearLayout
        android:id="@+id/llayout_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/bg_classromm_share"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ffececec" />

        <RelativeLayout
            android:id="@+id/rlayout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_8">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/img_head"
                android:text=""
                android:textColor="#ff444444"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_name"
                android:text=""
                android:textColor="#ffaab2b5"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/bg_share_classromm"
                android:gravity="center"
                android:text="本期嘉宾"
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/mask" />

        <RelativeLayout
            android:id="@+id/rlayout_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_33"
                android:text="【长按识别二维码】"
                android:textColor="#ff444444"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_biaoyu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="扫一扫 立即观看视频"
                android:textColor="#ff3e64b9"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="@dimen/dp_73"
                android:layout_height="@dimen/dp_73"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/shadow_index_act">

                <ImageView
                    android:id="@+id/img_ma"
                    android:layout_width="@dimen/dp_61"
                    android:layout_height="@dimen/dp_61"
                    android:layout_centerInParent="true"
                    android:src="@color/gray_light" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="分享给好友"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bwx_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/weix_sicon"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="微信好友" />

                <TextView
                    android:id="@+id/bpyq_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/pyq_sicon"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="朋友圈" />

                <TextView
                    android:id="@+id/balc_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_photo_lan"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="保存到相册" />


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bfinish_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/classroom_close" />


</RelativeLayout>