<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="置顶卡"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/tool_bar"
        android:background="#F5F5F5" />

    <RelativeLayout
        android:id="@+id/super_exposure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_alignParentTop="true"
            android:background="#ffececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blx_servicemanager"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="1"
                android:background="@drawable/shape_gosee_left"
                android:gravity="center"
                android:text="咨询服务经理"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_bug"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="1"
                android:background="@drawable/shape_gosee_left"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/super_exposure"
        android:layout_below="@id/view"
        android:layout_marginBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_21"
                android:includeFontPadding="false"
                android:text="置顶卡"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_12"
                android:includeFontPadding="false"
                android:text="优质资源，置顶一天；分类固顶，获得更多曝光"
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_205"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="fitXY"
                android:src="@mipmap/super_exposure" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_82">

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_22"
                    android:src="@mipmap/top_card_logo" />

                <LinearLayout
                    android:id="@+id/ll_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_toRightOf="@+id/img_01"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="置顶卡 x 7"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_45"
                        />
                    <TextView
                        android:id="@+id/tv_price_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_memo_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共可置顶7天"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_below="@+id/ll_01"
                    android:layout_toRightOf="@+id/img_01"
                    />

                <TextView
                    android:id="@+id/btop_buyonetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorPrimary"
                    android:text="购买"
                    android:background="@drawable/shape_top_buy"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:background="#E5E5E5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_82">

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_22"
                    android:src="@mipmap/top_card_logo" />

                <LinearLayout
                    android:id="@+id/ll_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_toRightOf="@+id/img_02"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="置顶卡 x 7"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_45"
                        />
                    <TextView
                        android:id="@+id/tv_price_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_memo_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共可置顶7天"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_below="@+id/ll_02"
                    android:layout_toRightOf="@+id/img_02"
                    />

                <TextView
                    android:id="@+id/btop_buyonetv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorPrimary"
                    android:text="购买"
                    android:background="@drawable/shape_top_buy"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:background="#E5E5E5" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_82">

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_22"
                    android:src="@mipmap/top_card_logo" />

                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_toRightOf="@+id/img_03"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="置顶卡 x 7"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_45"
                        />
                    <TextView
                        android:id="@+id/tv_price_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffde6654"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_memo_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共可置顶7天"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_below="@+id/ll_03"
                    android:layout_toRightOf="@+id/img_03"
                    />

                <TextView
                    android:id="@+id/btop_buyonetv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorPrimary"
                    android:text="购买"
                    android:background="@drawable/shape_top_buy"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:background="#E5E5E5" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>