<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:id="@+id/index_classify"
        android:background="@color/white">

        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/item_classify_img"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/item_classify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_classify_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_color_1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/goto_new"
            />




    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"
        />
    
</RelativeLayout>