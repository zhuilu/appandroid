<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/rlayout_back"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改登录密码"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_18"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前绑定手机"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/_999"
        />

    <TextView
        android:id="@+id/mBindPhonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_28"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_50"
        >

        <com.xinniu.android.qiqueqiao.widget.CountDownTextView
            android:id="@+id/byzmchangeCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_12"
            android:text="获取验证码"
            android:background="@drawable/shape_yzm"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            />





        <EditText
            android:id="@+id/mchangecodeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/byzmchangeCode"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_18"
            />





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >

        <EditText
            android:id="@+id/mchangecodeYzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_color_1"
            android:hint="新密码(6-12位数字或字母)"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/bchangeCodetv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="@string/sure_tag"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/bg_login_rec"
        android:gravity="center"
        />





</LinearLayout>