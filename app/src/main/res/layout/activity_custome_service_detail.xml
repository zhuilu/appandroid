<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF0F0F0">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                android:src="@mipmap/chevron" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请详情"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />



    </RelativeLayout>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:text="已申请客服介入"
        android:textStyle="bold"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/tv_status_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请等待客服处理结果"
        android:textColor="#ff777777"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_14"
        />


    <LinearLayout
        android:id="@+id/llayout_custome_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_trans_white"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17">
            <TextView
                android:id="@+id/tv_custome_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请客服介入"
                android:textColor="#ff5c9ef4"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                />
            <TextView
                android:id="@+id/tv_custome_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff777777"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@+id/tv_custome_service"
                android:textSize="@dimen/sp_12"
                />

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_lx_headimg_03"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_18"
                android:src="@mipmap/head_new_icon" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#ffe5e5e5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明"
            android:layout_marginTop="@dimen/dp_21"
            android:textColor="@color/_333"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_13"
            />
        <TextView
            android:id="@+id/tv_custome_service_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:text=""
            android:textColor="#ff777777"
            android:lineSpacingExtra="@dimen/dp_1"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_23"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:background="#ffe5e5e5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_img_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="凭证"
            android:textColor="@color/_333"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_22"
            android:textSize="@dimen/sp_13"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/refund_photo_recycler_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"/>

    </LinearLayout>
</LinearLayout>
