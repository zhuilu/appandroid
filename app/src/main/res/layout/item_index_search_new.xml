<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_index_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/index_focus_cell"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-5dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                >
                <FrameLayout
                    android:id="@+id/item_index_recycler_Fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.xinniu.android.qiqueqiao.widget.CircleImageView
                        android:id="@+id/item_index_recycler_img"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentLeft="true"
                        />

                    <ImageView
                        android:id="@+id/index_new_isv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/head_is_v20_20"
                        android:layout_gravity="bottom|right"
                        android:visibility="gone"
                        />




                </FrameLayout>

                <TextView
                    android:id="@+id/item_index_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_index_recycler_Fl"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="张飞"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_gray_color92"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_index_nameTv"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/item_index_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:textColor="@color/text_color_AE"
                        />
                    <ImageView
                        android:id="@+id/item_index_new_company_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@id/item_index_position"
                        android:scaleType="matrix"
                        android:src="@mipmap/vip_new_icon_company"
                        android:visibility="gone" />
                    <ImageView
                        android:id="@+id/item_index_new_kingimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/item_index_position"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:scaleType="matrix"
                        />
                    <ImageView
                        android:id="@+id/item_index_new_re"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@id/item_index_new_kingimg"
                        android:scaleType="matrix"
                        android:src="@mipmap/re_list"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>



            <TextView
                android:id="@+id/item_index_recycler_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The数据库连接立刻接口连接"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_6"
                android:lineSpacingExtra="@dimen/dp_5"
                android:letterSpacing="0.05"
                android:typeface="normal"
                android:textColor="@color/text_color_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/yoffertagRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_27"
                    android:visibility="visible"
                    >
                    <ImageView
                        android:id="@+id/offerImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/offer_search"
                        />
                    <com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout
                        android:id="@+id/coop_moffer_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toRightOf="@id/offerImg"

                        />




                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/yneedtagRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_27"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/needImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:src="@mipmap/need_search"/>

                    <com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout
                        android:id="@+id/coop_mneed_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toRightOf="@id/needImg"
                        />

                </RelativeLayout>




            </LinearLayout>




            <LinearLayout
                android:id="@+id/yindex_on_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_9"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_2_5"
                    android:background="@color/line_color"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_9"
                    android:id="@+id/msearchofferneedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_9"
                    />



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/line_color"
                android:layout_marginBottom="@dimen/dp_8"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                >


                <TextView
                    android:id="@+id/item_index_recycler_mannertv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:text="资源互换"
                    android:paddingLeft="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_7"
                    android:gravity="center"
                    android:textColor="#ff268ff5"
                    android:textSize="@dimen/sp_11"
                    android:background="@drawable/bg_search_list"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/item_index_recycler_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="123"
                    android:textSize="@dimen/sp_11"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textColor="@color/text_gray_color2"
                    />
                <ImageView
                    android:id="@+id/item_index_recycler_answer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tell_cion"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/item_index_recycler_answer"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/item_index_recycler_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textSize="@dimen/sp_11"
                    android:layout_toLeftOf="@id/item_index_recycler_answer_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:textColor="@color/text_gray_color2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/eye_icon"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:layout_toLeftOf="@id/item_index_recycler_see"
                    />

            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>