<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_top_height"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_alignParentBottom="true"
            android:background="@color/tool_bar_color"
            android:paddingLeft="@dimen/padding_left_and_right"
            android:paddingRight="@dimen/padding_left_and_right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布合作"
                android:textColor="@color/tool_bar_text_color"
                android:textSize="@dimen/tool_bar_text_size" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ypush_successRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:padding="50dp"
            app:srcCompat="@mipmap/release_success" />

        <ImageView
            android:id="@+id/bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:srcCompat="@mipmap/release_success_close" />

        <LinearLayout
            android:id="@+id/share_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_close"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/share_item_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/share_weixin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="微信" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_item_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/share_circle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="朋友圈" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_item_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/share_qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="QQ" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_item_wb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/share_weibo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="微博" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_item_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/share_qrcode" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="二维码" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/share_item"
            android:gravity="center"
            android:padding="16dp"
            android:text="立即分享获取更多流量"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yaudit_releaseFl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/new_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_marginTop="@dimen/top_margin">

            <RelativeLayout
                android:id="@+id/bBack_Rl"
                android:layout_width="@dimen/tool_bar_height"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@mipmap/chevron" />


            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布成功"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/new_tool_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_325">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/dp_145"
                        android:layout_height="@dimen/dp_145"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        app:srcCompat="@mipmap/success_pic" />

                    <TextView
                        android:id="@+id/titlex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img"
                        android:layout_centerHorizontal="true"
                        android:text="发布成功"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/msuccess_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titlex"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="信息正在审核中"
                        android:textColor="@color/push_color_orange"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/msuccess_title_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/msuccess_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="优质资源将会被置顶获得顶级曝光"
                        android:textColor="@color/push_color_orange"
                        android:textSize="@dimen/sp_12" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/msuccess_title_memo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/editbtn"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_36"
                            android:background="@drawable/bg_vip_left"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/dp_30"
                            android:text="再改改"
                            android:textColor="@color/vip_info_color"
                            android:textSize="@dimen/sp_15" />
                    <TextView
                        android:id="@+id/bsuccessbtn"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/bg_lx_detail"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_21">

                    <TextView
                        android:id="@+id/go_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="立即分享"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_toLeftOf="@+id/go_share"
                        android:background="@color/line_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_toRightOf="@+id/go_share"
                        android:background="@color/line_color" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_107"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_30"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/bshare_wxtv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/share_weixin"
                        android:drawablePadding="@dimen/dp_9"
                        android:gravity="center"
                        android:text="微信" />

                    <TextView
                        android:id="@+id/bshare_circletv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/share_circle"
                        android:drawablePadding="@dimen/dp_9"
                        android:gravity="center"
                        android:text="朋友圈" />

                    <TextView
                        android:id="@+id/bshare_photolantv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/share_photo_lan"
                        android:drawablePadding="@dimen/dp_9"
                        android:gravity="center"
                        android:text="生成海报" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="@color/bg_gray" />

                <RelativeLayout
                    android:id="@+id/resource_Rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="推荐资源"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

                <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                    android:id="@+id/msuccessRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>