<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                android:src="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结算"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:background="#ffececec" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余担保金"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/_777"
        android:textSize="@dimen/sp_13"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="￥"
            android:gravity="bottom"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="19880"
            android:textColor="@color/_333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结算金额"
        android:textColor="#ff777777"
        android:layout_marginTop="@dimen/dp_28"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_16"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_13"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥"
            android:layout_gravity="center_vertical"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_17" />
        <EditText
            android:id="@+id/tv_price_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColorHint="#ffaaaaaa"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/_333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_28" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#ffe2e2e2"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_9"/>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/bg_tran_pay"
        android:text="确认结算"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
