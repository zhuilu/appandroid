<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xinniu.android.qiqueqiao.utils.RoundImageView
            android:id="@+id/mcoop_detail_companyImg"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/default1_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_toRightOf="@+id/mcoop_detail_companyImg"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text="专业Logo设计，公司标志设计，全套VI设计"
            android:textColor="@color/_444"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@+id/mcoop_detail_companyImg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_service_biaoqian"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="流量资源"
                android:textColor="@color/_555"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/bg_service_biaoqian"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="流量资源"
                android:textColor="@color/_555"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_tag_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/bg_service_biaoqian"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="流量资源"
                android:textColor="@color/_555"
                android:textSize="@dimen/sp_11" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mcoop_detail_companyImg"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_toRightOf="@+id/mcoop_detail_companyImg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_rz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_1"
                app:srcCompat="@mipmap/vip_new_icon_company" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="大宝剑"
                android:textColor="@color/_888"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_125"
        android:background="#ffececec" />

</LinearLayout>
