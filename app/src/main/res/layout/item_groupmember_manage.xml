<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_71">

    <RelativeLayout
        android:id="@+id/bgroupmemberRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        
        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/mmanagemehead"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/mmanagetimetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/text_color_AE"
            android:textSize="@dimen/sp_12"
            />


        <TextView
            android:id="@+id/mmanagetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_group_manage"
            android:text="管理"
            android:textColor="@color/white"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/mmanagestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mmanagetv"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/_999"
            android:textSize="@dimen/sp_14"
            android:text="已禁言"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mmanagestatus"
            android:layout_toRightOf="@+id/mmanagemehead"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            >
            <RelativeLayout
                android:id="@+id/groupmemberma_Rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_19">
                <TextView
                    android:id="@+id/mgroupmembertv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_color_1"
                    android:text="客户经理"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/mgroup_managestatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mgroupmembertv"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/bg_group_member"
                    android:text="管理"
                    android:textColor="@color/vip_info_color"
                    android:gravity="center"
                    android:textSize="@dimen/sp_11"
                    />


            </RelativeLayout>
            <TextView
                android:id="@+id/mgroup_manageidentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupmemberma_Rl"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/search_text_color_gray"
                android:singleLine="true"
                android:ellipsize="end"
                />

        </RelativeLayout>

        
        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"
        />



</RelativeLayout>