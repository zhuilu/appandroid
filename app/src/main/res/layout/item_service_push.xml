<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rlayout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_root_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_typeimg"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@mipmap/mypush_typeicon" />

            <TextView
                android:id="@+id/item_typenametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/item_typeimg"
                android:text="销售渠道"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/llayout_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="上架中"
                    android:textColor="@color/bg_color_green"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@mipmap/service_push_more"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:background="#ffececec" />

        <RelativeLayout
            android:id="@+id/rlayout_root_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xinniu.android.qiqueqiao.utils.RoundImageView
                android:id="@+id/mcoop_detail_companyImg"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_96"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_15"
                android:scaleType="fitXY"
                android:src="@mipmap/default1_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="2"
                android:text="专业Logo设计，公司标志设计，全套VI设计"
                android:textColor="@color/_444"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_service_biaoqian"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="流量资源"
                    android:textColor="@color/_555"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_service_biaoqian"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="流量资源"
                    android:textColor="@color/_555"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/tv_tag_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_service_biaoqian"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="流量资源"
                    android:textColor="@color/_555"
                    android:textSize="@dimen/sp_11" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mcoop_detail_companyImg"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_toRightOf="@+id/mcoop_detail_companyImg">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@mipmap/eye_icon" />

                <TextView
                    android:id="@+id/item_index_recycler_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img"
                    android:text="360人浏览"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="#E5E5E5" />

        <RelativeLayout
            android:id="@+id/rlayout_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="服务案例"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/img_go"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                app:srcCompat="@mipmap/goto_new" />

            <TextView
                android:id="@+id/tv_case_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/img_go"
                android:text="请添加"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_11">
            <TextView
                android:id="@+id/bresource_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/seletor_case"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="服务案例 (0)"
                android:includeFontPadding="false"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/bresource_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@+id/bresource_case"
                android:background="@drawable/seletor_textblue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="上架"
                android:includeFontPadding="false"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/bresource_refreshTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@+id/bresource_up"
                android:background="@drawable/seletor_textblue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="刷新"
                android:includeFontPadding="false"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/bresource_editTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@+id/bresource_refreshTv"
                android:background="@drawable/selector_textgreen"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="编辑"
                android:includeFontPadding="false"
                android:textColor="@color/bg_color_green"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/bresource_downTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@+id/bresource_editTv"
                android:background="@drawable/seletor_textred"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="下架"
                android:includeFontPadding="false"
                android:textColor="@color/bg_color_red_DE6654"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/bresource_deleteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:background="@drawable/seletor_deleted"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="删除"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
