<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:singleLine="false"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14">

                    <TextView
                        android:id="@+id/tv_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_tag_1"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_tag_2"
                        android:background="@drawable/bg_vedio_tag"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLength="5"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_2_5"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="#ffececec" />
                <LinearLayout
                    android:id="@+id/llayout_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="本期嘉宾"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_14"
                  >

                    <com.xinniu.android.qiqueqiao.utils.RoundImageView
                        android:id="@+id/mcoop_detail_companyImg"
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_77"

                        android:scaleType="fitXY"
                        android:src="@mipmap/default1_icon" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="孙大的"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_jiabing_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_toRightOf="@+id/mcoop_detail_companyImg"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/dp_2"
                        android:maxLines="3"
                        android:text="100万以上商务用户APP流量资源尔特人员特乳液而也让问问他尔特温柔提问提问维尔瓦尔特委托，热热我让他尔特委托"
                        android:textColor="@color/_999"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="视频介绍"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_19"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />


                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="视频配图"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photo_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14">


                </androidx.recyclerview.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#fff8f9f9" />
                <LinearLayout
                    android:id="@+id/llayout_resource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_14"
                    android:text="推荐资源"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_2_5"
                    android:background="#ffececec" />

                <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
                    android:id="@+id/mcompany_resource_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/companyheadRl">

                </com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/mcompany_infoImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_50"
                        android:drawableTop="@mipmap/perchthree"
                        android:gravity="center"
                        android:text="暂无合作信息"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_11" />

                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</LinearLayout>
