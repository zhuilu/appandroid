<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_resource_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-5dp"
    android:background="@color/bg_color_gray_F6F6F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/shadow_xyxy"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_typeimg"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:src="@mipmap/mypush_typeicon" />

            <TextView
                android:id="@+id/item_typenametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/item_typeimg"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:id="@+id/llayout_reson"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resource_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/vip_info_color"
                    android:textSize="@dimen/sp_13" />
                <TextView
                    android:id="@+id/img_reson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:drawableLeft="@mipmap/reson_img"
                    android:text="原因"
                    android:drawablePadding="@dimen/dp_1"
                    android:textColor="@color/king_color"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:layout_alignParentBottom="true"
                android:background="#ffececec" />


        </RelativeLayout>


        <TextView
            android:id="@+id/item_my_resourcex_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_14"
            android:maxLines="2"
            android:textColor="@color/_333"
            android:paddingTop="@dimen/dp_2_5"
            android:paddingBottom="@dimen/dp_2_5"
            android:text="国家级举办国家,国家级举办国家级举办"
            android:textSize="@dimen/sp_16"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/line_color"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
           >

            <RelativeLayout
                android:id="@+id/item_my_re_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">


                <ImageView
                    android:id="@+id/resource_eyeImg"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/eye_icon" />

                <TextView
                    android:id="@+id/resource_eyeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/resource_eyeImg"
                    android:text="1323"
                    android:textColor="@color/text_gray_color2"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:id="@+id/resource_tellImg"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@id/resource_eyeTv"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/tell_cion" />

                <TextView
                    android:id="@+id/resource_tellTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_toRightOf="@+id/resource_tellImg"
                    android:text="131241"
                    android:textColor="@color/text_gray_color2"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#ffececec" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/bresource_refreshTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/seletor_textblue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="刷新"
                android:includeFontPadding="false"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/bresource_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@id/bresource_refreshTv"
                android:background="@drawable/seletor_textblue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="置顶"
                android:includeFontPadding="false"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/bresource_editTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@id/bresource_top"
                android:background="@drawable/selector_textgreen"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="编辑"
                android:includeFontPadding="false"
                android:textColor="@color/bg_color_green"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/bresource_downTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@id/bresource_editTv"
                android:background="@drawable/seletor_textred"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="下架"
                android:includeFontPadding="false"
                android:textColor="@color/bg_color_red_DE6654"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/bresource_deleteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:background="@drawable/seletor_deleted"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="删除"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_13" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>