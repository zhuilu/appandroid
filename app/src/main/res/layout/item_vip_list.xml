<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:layout_below="@id/name"
        android:id="@+id/desc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="每天可以沟通40人加入至尊合作对接圈子"
        android:maxLines="2"
        android:textColor="#999999"
        android:textSize="10sp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_toRightOf="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥199"
        android:textSize="20sp"
        android:textColor="@color/_eb3c42"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/premium_pirce"
        android:layout_toRightOf="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥199"
        android:textSize="20sp"
        android:textColor="#999999"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/recommon"
        android:layout_toRightOf="@id/premium_pirce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/vip_list_recommand"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/bug_bt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="购买"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:background="@drawable/selector_bug_bt_bg"/>
</RelativeLayout>