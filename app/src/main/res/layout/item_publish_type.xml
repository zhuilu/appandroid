<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_publish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:background="@color/white"
        >

        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/item_headImg"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <ImageView
            android:id="@+id/gotoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/goto_new"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_headImg"
            android:layout_toLeftOf="@id/gotoImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            >

            <TextView
                android:id="@+id/mselecttypetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                />

            <TextView
                android:id="@+id/mselectcontenttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mselecttypetv"
                android:textColor="@color/text_color_AA"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_4"
                android:singleLine="true"
                android:ellipsize="end"
                />


        </RelativeLayout>
        

        
    </RelativeLayout>



</RelativeLayout>