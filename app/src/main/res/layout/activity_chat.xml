<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tool_bar_positiontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/_999"
            android:textSize="@dimen/sp_11" />

        <RelativeLayout
            android:id="@+id/right_bt"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/person_lxset" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/no_xingqu_tip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF5E7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="已设置为不感兴趣，将不在提示TA的消息"
                android:textColor="#FF7132"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:text="修改"
                android:textColor="#FF7132"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/exchang_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_63"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exchange_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@mipmap/chat_phone_1"
                    android:gravity="center"
                    android:padding="@dimen/dp_6"
                    android:text="拨打电话"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/exchange_wechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@mipmap/chat_wechat"
                    android:gravity="center"
                    android:padding="@dimen/dp_6"
                    android:text="加微信"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/no_exchange"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@mipmap/fqjy"
                    android:gravity="center"
                    android:padding="@dimen/dp_6"
                    android:text="发起交易"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/yrefuseRl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentTop="true"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/mrequest_titletv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="对方请求添加您为好友"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/mrequest_titletv">

                    <TextView
                        android:id="@+id/bchat_agreetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/bg_chat_agree"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/bchat_refusetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/bchat_agreetv"
                        android:background="@drawable/bg_chat_refuse"
                        android:text="拒绝"
                        android:textColor="@color/vip_info_color"
                        android:textSize="@dimen/sp_14" />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/yaddfriendRl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentTop="true"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/maddfriend_titletv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="添加对方为好友,方便您下次即时联系"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/maddfriend_titletv">

                    <TextView
                        android:id="@+id/bchat_addfriendtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/bg_chat_agree"
                        android:text="加好友"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>