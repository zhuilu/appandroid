<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/makedialogRl"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_211"
            android:background="@drawable/bg_timeshape_dialog"
            >
            <TextView
                android:id="@+id/yzmTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入短信验证码"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/text_color_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_25"
                />
            <TextView
                android:id="@+id/msureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textSize="@dimen/sp_15"
                android:layout_below="@+id/yzmTv"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:id="@+id/yzmRl"
                android:layout_width="@dimen/dp_125"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/msureTv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_24"
                android:background="@drawable/bg_makeovercode"
                >
                <EditText
                    android:id="@+id/mYzmEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text_color_1"
                    android:digits="0123456789"
                    android:inputType="number"
                    />


            </RelativeLayout>
            <TextView
                android:id="@+id/bgainCodeTv"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/msureTv"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/yzmRl"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/bg_makeover_blue"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/goToTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/yzmRl"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/bg_makeover_blue"
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                />



        </RelativeLayout>

        <ImageView
            android:id="@+id/bcacelImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/close_tuisong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_below="@+id/makedialogRl"
            />
        
        
        
        
        
        
    </RelativeLayout>





</RelativeLayout>