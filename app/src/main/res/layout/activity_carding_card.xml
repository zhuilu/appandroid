<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="专业梳理卡"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_below="@+id/tool_bar"
        android:background="#ffececec" />

    <RelativeLayout
        android:id="@+id/super_exposure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_alignParentTop="true"
            android:background="#ffececec" />


        <TextView
            android:id="@+id/tv_bug"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="1"
            android:background="@drawable/shape_gosee_left"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/super_exposure"
        android:layout_below="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_84"
                    android:background="@mipmap/carding_bg">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@mipmap/carding_edit" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_19"
                        android:layout_toRightOf="@+id/img"
                        android:src="@mipmap/carding_text" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_18"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_19" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginBottom="@dimen/dp_9"
                        android:text="当前已有 0 张"
                        android:textColor="#ff4b96f3"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_19"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/carding"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_13" />

            <View
                android:id="@+id/view_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:layout_below="@+id/tv"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_19"
                android:background="#ffeeeeee" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_01"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_18"
                android:text="服务流程"
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_02">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:src="@mipmap/step_card"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="@dimen/dp_2"
                        android:text="购买道具"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/sp_13" />
            <TextView
                android:id="@+id/tv_03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="发布合作信息并勾选合作信息专业梳理服务"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="合作信息梳理官会为您梳理、编辑合作信息"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_05"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="合作信息审核通过"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_13" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="不满意可全额退款"
                android:textColor="@color/_666"
                android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
