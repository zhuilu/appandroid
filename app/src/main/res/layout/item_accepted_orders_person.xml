<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_108"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_lx_headimg"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33"
                android:layout_centerVertical="true"
                android:src="@mipmap/head_new_icon" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/item_lx_headimg">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lx_nametv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="服务经理"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/item_index_vipImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:scaleType="matrix" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lx_positiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="已接单"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_17">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_27"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:text="结算赏金"
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_27"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toLeftOf="@+id/tv_01"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:text="私聊"
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_27"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toLeftOf="@+id/tv_02"
                android:background="@drawable/bg_trans_organe"
                android:gravity="center"
                android:text="申请详情"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="@dimen/dp_71"
                android:layout_height="@dimen/dp_27"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toLeftOf="@+id/tv_03"
                android:background="@drawable/bg_trans_gray"
                android:gravity="center"
                android:text="申请取消"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_58"
        android:background="#FFECECEC" />
</LinearLayout>
