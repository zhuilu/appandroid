<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/view12"
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tool_bar_color">



        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/head_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/real_name_tv"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_iv"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_below="@id/real_name_tv"
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_iv"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#999999"/>
        <TextView
            android:layout_below="@id/real_name_tv"
            android:id="@+id/company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/location_tv"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:lines="1"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/view13"
        android:layout_below="@id/view12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"

            android:textColor="#999999"
            android:textSize="12sp"/>

        <View style="@style/l_hor" />

        <TextView
            android:id="@+id/tv_need"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/need_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"

            android:textColor="#999999"
            android:textSize="12sp"/>

        <View style="@style/l_hor" />

        <TextView
            android:id="@+id/tv_way"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />

    </LinearLayout>
    <TextView
        android:layout_below="@id/view13"
        android:layout_marginTop="10dp"
        android:id="@+id/talked_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="已沟通"
        android:background="#fff"/>


</RelativeLayout>