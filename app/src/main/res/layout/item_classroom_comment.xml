<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_comment_infoRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_class_comment_control">
    <View
        android:id="@+id/item_commentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_80"
        android:background="@color/bg_color_blue_FAFEFF"
        android:visibility="gone"
        />


    <RelativeLayout
        android:id="@+id/goRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/bg_class_comment_control">

        <FrameLayout
            android:id="@+id/item_comment_headFl"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_2">


            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_comment_headimg"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"

                />

            <ImageView
                android:id="@+id/item_comment_head_isv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                app:srcCompat="@mipmap/head_is_v20_20"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llayout_good"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_14">

            <TextView
                android:id="@+id/item_good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:textColor="@color/_666"
                android:text="111"
                android:textSize="@dimen/sp_9" />

            <ImageView
                android:id="@+id/img_good"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/llayout_good"
            android:layout_toRightOf="@+id/item_comment_headFl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_comment_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_class_comment_control"
                    android:textColor="@color/blue_bg_4B96F3"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/item_comment_positiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/bg_class_comment_control"
                    android:ellipsize="end"

                    android:singleLine="true"
                    android:textColor="#b2b6b8"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_7"

                android:textColor="#ffbbbbbb"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/item_commenttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goRl"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/coop_reply_comrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_commenttv"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="#fff7f7f7"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">


        <TextView
            android:id="@+id/coop_reply_commenttv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"

            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_below="@+id/coop_reply_comrl"
        android:background="#ffececec" />


</RelativeLayout>