<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlayout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@mipmap/db_order" />
            <LinearLayout
                android:id="@+id/llayout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:layout_centerVertical="true"
                android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"

           >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="担保交易订单"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="111111"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlayout_01"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_2"
            android:text="1111111111"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlayout_price_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlayout_top"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="担保金："
                android:layout_centerVertical="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_toRightOf="@+id/tv_01"
                android:layout_centerVertical="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_price_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_02"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易人："
                android:layout_toLeftOf="@+id/tv_name"
                android:layout_centerVertical="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_12"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayout_price_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlayout_price_d"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结算："
                android:layout_centerVertical="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_toRightOf="@+id/tv_011"
                android:layout_centerVertical="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_price_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_022"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易人："
                android:layout_toLeftOf="@+id/tv_name_1"
                android:layout_centerVertical="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/sp_12"
                />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llayout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlayout_price_j"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_02"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_26"
                android:includeFontPadding="false"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:text="部分结算"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/btn_01"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_26"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:text="部分结算"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:background="#FFE5E5E5"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>
