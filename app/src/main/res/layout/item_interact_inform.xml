<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_system_content"
    android:id="@+id/interact_informRl">

    <RelativeLayout
        android:id="@+id/item_interact_infoRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >

        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/item_interact_headimg"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"

            />

        <TextView
            android:id="@+id/item_interact_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_interact_headimg"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/item_interact_timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_AA"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/item_interact_positiontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_interact_nametv"
            android:layout_toLeftOf="@id/item_interact_timetv"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_AA"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            />






    </RelativeLayout>
    <TextView
        android:id="@+id/item_interact_replytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_interact_infoRl"
        android:layout_marginLeft="@dimen/dp_51"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_color_1"
        />
    <TextView
        android:id="@+id/item_interact_replyinfotv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_interact_infoRl"
        android:layout_toRightOf="@id/item_interact_replytv"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_color_1"
        android:layout_marginLeft="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/item_interact_replycontenttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_interact_replytv"
        android:layout_marginLeft="@dimen/dp_51"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_16"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@id/item_interact_replycontenttv"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />



</RelativeLayout>