<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/r_search"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_70">

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentTop="true"></RelativeLayout>


        <RelativeLayout
            android:id="@+id/yindex_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5">

            <ImageView
                android:id="@+id/qrBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/qrcode_white" />

            <RelativeLayout
                android:id="@+id/sreach_content_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_toLeftOf="@+id/qrBt"
                android:background="@drawable/bg_search_main">

                <ImageView
                    android:id="@+id/glassImg"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    app:srcCompat="@mipmap/search_gray"

                    />

                <com.xinniu.android.qiqueqiao.customs.ClearEditText
                    android:id="@+id/sreach_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/glassImg"
                    android:background="@null"
                    android:editable="false"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="找渠道，找资源，找企业，来搜一下！"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:textColorHint="@color/text_color_7B"
                    android:textSize="13sp" />


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_search"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlayout_tab_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_tab_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignParentBottom="true"
                    android:text="合作信息"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:id="@+id/view_tab_01"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_mian_view"
                    android:visibility="visible" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rlayout_tab_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_tab_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignParentBottom="true"
                    android:text="悬赏求助"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:id="@+id/view_tab_03"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_mian_view"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlayout_tab_04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_tab_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignParentBottom="true"
                    android:text="商务活动"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:id="@+id/view_tab_04"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_mian_view"
                    android:visibility="invisible" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlayout_tab_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_19">

                <TextView
                    android:id="@+id/tv_tab_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignParentBottom="true"
                    android:text="企业服务"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:id="@+id/view_tab_02"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_mian_view"
                    android:visibility="invisible" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlayout_tab_05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_tab_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_alignParentBottom="true"
                    android:text="异业课堂"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:id="@+id/view_tab_05"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_mian_view"
                    android:visibility="invisible" />
            </RelativeLayout>


        </LinearLayout>

    </HorizontalScrollView>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hs"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>