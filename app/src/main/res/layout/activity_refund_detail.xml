<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F0F0"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                android:src="@mipmap/chevron" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退款申请"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="您已申请退款"
                android:textStyle="bold"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_24" />

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_trans_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="请尽快支付担保金"
                    android:textStyle="bold"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="剩余时间10:00分，超时将自动取消交易"
                    android:textColor="#ff777777"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/bg_trans_gray"
                        android:gravity="center"
                        android:text="取消退款"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/bg_trans_gray"
                        android:gravity="center"
                        android:text="同意退款"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_03"
                        android:layout_width="@dimen/dp_88"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/bg_trans_gray"
                        android:gravity="center"
                        android:text="申请客服介入"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12"
                        android:visibility="visible" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_trans_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_14"
                    android:text="退款详情"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_2_5"
                    android:background="#ffe6e6e6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="发起退款申请"
                        android:textColor="#ff5c9ef4"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_application_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_application"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text=""
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_12" />

                    <com.xinniu.android.qiqueqiao.widget.CircleImageView
                        android:id="@+id/item_lx_headimg"
                        android:layout_width="@dimen/dp_43"
                        android:layout_height="@dimen/dp_43"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_18"
                        android:src="@mipmap/head_new_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="退款金额"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_price_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="退还剩余担保金"
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="退款原因"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_refund_reson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="双方协商一致"
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="退款说明"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_refund_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:lineSpacingExtra="@dimen/dp_1"
                    android:text=""
                    android:textColor="#ff777777"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_img_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="凭证"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/refund_photo_recycler_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20" />

                <LinearLayout
                    android:id="@+id/llayout_refuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view_bottom_01"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#ffe6e6e6" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_21">

                        <TextView
                            android:id="@+id/tv_refuse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="对方拒绝退款申请"
                            android:textColor="#ff5c9ef4"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_refuse_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_refuse"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text=""
                            android:textColor="#ff777777"
                            android:textSize="@dimen/sp_12" />

                        <com.xinniu.android.qiqueqiao.widget.CircleImageView
                            android:id="@+id/item_lx_headimg_02"
                            android:layout_width="@dimen/dp_43"
                            android:layout_height="@dimen/dp_43"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_18"
                            android:src="@mipmap/head_new_icon" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="说明"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_refuse_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:lineSpacingExtra="@dimen/dp_1"
                        android:text=""
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_img_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="凭证"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/refund_photo_recycler_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayout_custome_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view_bottom_02"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_2_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#ffe6e6e6" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20">

                        <TextView
                            android:id="@+id/tv_custome_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="申请客服介入"
                            android:textColor="#ff5c9ef4"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_custome_service_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_custome_service"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text=""
                            android:textColor="#ff777777"
                            android:textSize="@dimen/sp_12" />

                        <com.xinniu.android.qiqueqiao.widget.CircleImageView
                            android:id="@+id/item_lx_headimg_03"
                            android:layout_width="@dimen/dp_43"
                            android:layout_height="@dimen/dp_43"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_18"
                            android:src="@mipmap/head_new_icon" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="说明"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_custome_service_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:lineSpacingExtra="@dimen/dp_1"
                        android:text=""
                        android:textColor="#ff777777"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_img_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="凭证"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_13" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/refund_photo_recycler_03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
