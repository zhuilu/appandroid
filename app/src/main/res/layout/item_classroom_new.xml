<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_118">

        <com.xinniu.android.qiqueqiao.utils.RoundImageView
            android:id="@+id/img_poster"
            android:layout_width="@dimen/dp_143"
            android:layout_height="@dimen/dp_79"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@drawable/bg_white_2"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/img_poster"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_2"
            android:maxLines="2"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/rlayout_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_19"
            android:layout_toRightOf="@+id/img_poster"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/tv_good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  ·  "
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlayout_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlayout_message"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/img_poster">


            <TextView
                android:id="@+id/tv_tag_1"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:singleLine="true"
                android:text=""
                android:textColor="#519EFE"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_tag_2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/tv_tag_1"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:singleLine="true"
                android:text=""
                android:textColor="#519EFE"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_tag_3"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/tv_tag_2"
                android:background="@drawable/bg_vedio_tag"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLength="5"
                android:singleLine="true"
                android:text=""
                android:textColor="#519EFE"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#FFE5E5E5" />
</LinearLayout>