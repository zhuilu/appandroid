<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/view_resource_Rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    >
    <RelativeLayout
        android:id="@+id/view_resource_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">


        <LinearLayout
            android:id="@+id/view_source_Ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/bg_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/view_source_retagTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/reset_tag"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:background="@drawable/bg_retag"
                    android:textColor="@color/text_gray_color92"
                    />
                <TextView
                    android:id="@+id/view_source_sureTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sure_tag"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/bg_suretag"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/view_scoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/view_source_Ll"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_20"
                >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moffer_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

             />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/need_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moffer_recycler"/>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tvOfferWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="@color/_333"
            android:text="提供资源类型"
            android:textStyle="bold"
            />

        <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
            android:id="@+id/item_offer_recycler_screenthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_below="@+id/tvOfferWindow"
            />
        <TextView
            android:id="@+id/tvNeedWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="@color/_333"
            android:layout_below="@+id/item_offer_recycler_screenthree"
            android:text="需求资源类型"
            android:textStyle="bold"
            />

        <com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView
            android:id="@+id/item_need_recycler_screenthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_below="@+id/tvNeedWindow"
            >

        </com.xinniu.android.qiqueqiao.utils.NoScrollRecyclerView>
    </RelativeLayout>
</RelativeLayout>