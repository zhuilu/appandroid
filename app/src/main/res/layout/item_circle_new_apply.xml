<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    android:id="@+id/itemView"
    >

    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/head_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:layout_toRightOf="@id/head_iv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="name"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="拒绝"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_circle_apply"
        android:textSize="14sp"
        android:textColor="@drawable/bg_circle_apply_text"/>
    <TextView
        android:id="@+id/agree"
        android:layout_toLeftOf="@id/refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同意"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_circle_apply"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@drawable/bg_circle_apply_text"/>
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="已拒绝"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:visibility="gone"/>


</RelativeLayout>