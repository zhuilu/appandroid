<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    
    <RelativeLayout

        android:layout_width="@dimen/dp_275"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/nolingRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_shape"
            >
           <TextView
               android:id="@+id/nolinkimg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:text="友情提示"
               android:textSize="@dimen/sp_18"
               android:textColor="@color/_333"
               android:textStyle="bold"
               android:layout_marginTop="@dimen/dp_20"
               />

            <TextView
                android:id="@+id/mnolinkmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nolinkimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/_333"
                />
            <TextView
                android:id="@+id/bgobugVip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37"
                android:layout_below="@id/mnolinkmsg"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_dialog_govip"
                android:text="购买会员"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/bgocomTask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37"
                android:layout_below="@id/bgobugVip"
                android:layout_marginTop="@dimen/dp_15"
                android:text="邀请好友获取沟通权限"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_dialog_gotask"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                />





        </RelativeLayout>

        <ImageView
            android:id="@+id/bfinish_img"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@id/nolingRl"
            android:src="@mipmap/close_tuisong"
            />






    </RelativeLayout>
    
    
    
    
    
    
    
    
    
    
    
    
</RelativeLayout>