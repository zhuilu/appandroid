<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_heiget"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="@dimen/padding_left_and_right"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="@dimen/login_item_icon_dp"
            android:layout_height="@dimen/login_item_icon_dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            app:srcCompat="@mipmap/login_pwd" />

        <EditText
            android:id="@+id/et_pwd_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="旧密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:textColor="@color/_333"
            android:textColorHint="@color/_999"
            android:textSize="@dimen/login_edit_hint_text_size" />

    </LinearLayout>

    <View
        style="@style/l_hor"
        android:layout_marginLeft="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_heiget"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="@dimen/padding_left_and_right"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="@dimen/login_item_icon_dp"
            android:layout_height="@dimen/login_item_icon_dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            app:srcCompat="@mipmap/login_pwd" />

        <com.xinniu.android.qiqueqiao.widget.PwdEditText
            android:id="@+id/et_pwd_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="新密码（6-12位数字和字母组合）"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:textColor="@color/_333"
            android:textColorHint="@color/_999"
            android:textSize="@dimen/login_edit_hint_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@color/_2DA0FB"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

</LinearLayout>