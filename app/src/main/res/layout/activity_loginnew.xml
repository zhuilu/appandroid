<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

   <LinearLayout
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:id="@+id/finish_img"
       >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/chevron"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="@dimen/dp_16"
          android:layout_marginLeft="@dimen/dp_20"
           />
   </LinearLayout>


   <TextView
       android:id="@+id/login_new_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/dp_30"
       android:gravity="center"
       android:text="点击登录，即表示已阅读并同意《企鹊桥服务协议》"
       android:textSize="@dimen/sp_12"
       />

   <TextView
       android:id="@+id/login_new_text_res"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@id/login_new_text"
       android:text="@string/phone_res_login"
       android:layout_marginBottom="@dimen/dp_83"
       android:layout_marginLeft="@dimen/dp_36"
       android:layout_alignParentLeft="true"
       android:textSize="@dimen/sp_13"
       android:textColor="@color/colorPrimary"
       />
   <TextView
       android:id="@+id/login_new_text_accpwd"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@id/login_new_text"
       android:text="@string/account_psw_login"
       android:layout_marginBottom="@dimen/dp_83"
       android:layout_marginRight="@dimen/dp_36"
       android:layout_alignParentRight="true"
       android:textSize="@dimen/sp_13"
       android:textColor="@color/colorPrimary"
       />
   <LinearLayout
       android:id="@+id/login_new_Ll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_above="@id/login_new_text_res"
       android:layout_marginBottom="@dimen/dp_20"
       android:layout_marginLeft="@dimen/dp_36"
       android:layout_marginRight="@dimen/dp_36"
       >
      <View
          android:layout_width="@dimen/dp_0"
          android:layout_height="@dimen/dp_0_5"
          android:layout_weight="1"
          android:background="@color/bg_text_gray_65"
          android:layout_gravity="center"
          />
      <TextView
          android:layout_width="@dimen/dp_0"
          android:layout_height="wrap_content"
          android:text="其他登录方式"
          android:layout_weight="1"
          android:gravity="center"
          android:textSize="@dimen/sp_12"
          android:textColor="@color/bg_text_gray_65"
          />

      <View
          android:layout_width="@dimen/dp_0"
          android:layout_height="@dimen/dp_0_5"
          android:layout_weight="1"
          android:background="@color/bg_text_gray_65"
          android:layout_gravity="center"
          />
      


   </LinearLayout>

   <RelativeLayout
       android:id="@+id/loginnew_wxlogin"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_44"
       android:layout_above="@id/login_new_Ll"
       android:layout_marginBottom="@dimen/dp_20"
       android:layout_marginLeft="@dimen/dp_36"
       android:layout_marginRight="@dimen/dp_36"
       android:background="@drawable/bg_wxlogin_green"
       >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_centerInParent="true"
          >
      <ImageView
          android:id="@+id/login_new_wxicon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/wx_icon"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wx_login"
          android:textSize="@dimen/sp_15"
          android:textColor="@color/white"
          android:layout_marginLeft="@dimen/dp_20"
          android:gravity="center"
          android:layout_gravity="center"
          />
      </LinearLayout>


   </RelativeLayout>

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/finish_img"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="97dp"
       android:src="@mipmap/qiqueqiaologodl" />

</RelativeLayout>