<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_view_push"
        >


    <TextView
        android:id="@+id/view_push_editTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_16"
        android:text="编辑"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/text_color_1"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/bg_gray"
            />
    <TextView
        android:id="@+id/view_push_downTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:textColor="@color/text_color_1"
        android:text="下架"
        android:background="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100"

        />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/bg_gray"
            />
    <TextView
        android:id="@+id/view_push_refreshTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:textColor="@color/text_color_1"
        android:text="一键刷新"
        android:background="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100"
        />

    </LinearLayout>



</LinearLayout>