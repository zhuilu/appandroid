<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_color_gray_F6F6F6"
    >

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="聊天设置"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/text_color_1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/bgotoPersenInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:background="@color/white"
            >

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/mcircle_headImg"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/head_new_icon"
                />


            <ImageView
                android:id="@+id/arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/goto_new"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mcircle_headImg"
                android:layout_toLeftOf="@+id/arr"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/mnametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:text="张飞"
                    />
                <ImageView
                    android:id="@+id/misvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mnametv"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/mpostion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mnametv"
                    android:layout_marginTop="@dimen/dp_5"
                    />




            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="置顶聊天"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                />
            <CheckBox
                android:id="@+id/btoplx_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@drawable/selector_message"
                android:background="@null"
                android:clickable="false"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_0_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="屏蔽联系人"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_17"/>


            <CheckBox
                android:id="@+id/bdislx_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@drawable/selector_message"
                android:background="@null"
                android:clickable="false"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blx_informRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_0_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="举报"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_17"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                app:srcCompat="@mipmap/goto_new"
                />


        </RelativeLayout>


        <TextView
            android:id="@+id/blx_settingstv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/selector_lx_setting"
            android:textColor="@color/white"
            android:text="删除好友"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:visibility="visible"
            />







    </LinearLayout>

    
    
    
</RelativeLayout>