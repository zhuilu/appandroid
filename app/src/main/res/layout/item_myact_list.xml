<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bitem_act"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/myactFl"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15">
            <ImageView
                android:id="@+id/myact_img"
                android:layout_width="@dimen/dp_165"
                android:layout_height="@dimen/dp_100"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/myact_statetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                />



        </FrameLayout>


        <TextView
            android:id="@+id/myact_titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myactFl"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

        <RelativeLayout
            android:id="@+id/my_cityRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myact_titletv"
            android:layout_toRightOf="@id/myactFl"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/myact_citytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/index_actplace"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/_999"
                android:drawablePadding="@dimen/dp_4"
                />

            <TextView
                android:id="@+id/myact_applystate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_11"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_cityRl"
            android:layout_toRightOf="@id/myactFl"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:id="@+id/myact_timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/index_actplace"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/_999"
                android:drawablePadding="@dimen/dp_4"
                />

            <TextView
                android:id="@+id/myact_goseetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_11"
                />



        </RelativeLayout>







    </RelativeLayout>
</RelativeLayout>