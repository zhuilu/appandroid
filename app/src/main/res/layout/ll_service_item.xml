<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_gray"
    >

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_top_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/beditcacelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="取消"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                />

            <TextView
                android:id="@+id/bsavetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="保存"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_14"
                />




        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bgroupNameRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/tool_bar"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0_5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="群组名称"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/text_color_1"
            />

        <TextView
            android:id="@+id/mgroupNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/goto_new"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/_999"
            />







    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/groupintroRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/bgroupNameRl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0_5"
        > <TextView
        android:id="@+id/groupintroTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="群组介绍"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_color_1"
        /> <TextView
        android:id="@+id/mgroupintroTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/goto_new"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/_999"
        android:layout_toRightOf="@+id/groupintroTv"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="right"
        />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/groupIndustryRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/groupintroRl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        > <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="行业分类"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_color_1"

        /> <TextView
        android:id="@+id/mgroupIndustryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/goto_new"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/_999"        />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/groupCityRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/groupIndustryRl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_0_5"
        > <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="群组地区"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_color_1"
        /> <TextView
        android:id="@+id/mgroupCityTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/goto_new"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/_999"        />

    </RelativeLayout>







</RelativeLayout>