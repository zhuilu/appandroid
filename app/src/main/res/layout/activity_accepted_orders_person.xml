<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="已接单人"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#FFE5E5E5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp_3"
                android:maxLines="2"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/bg_reward_gray"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        app:srcCompat="@mipmap/reward" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="赏金"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:text="￥"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_toRightOf="@+id/ll"
                    android:text="x "
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv"
                    android:text=""
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text=""
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:layout_marginTop="@dimen/dp_14"
                android:background="#FFF5F5F5" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:gravity="center"
                android:text="悬赏详情"
                android:textColor="#ff4b96f3"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#FFF6F6F6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47">

                <TextView
                    android:id="@+id/tv_take_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_17"
                    android:text="赏金库存不足，已下线"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:background="#FFF5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_78">

                <RelativeLayout
                    android:id="@+id/llayout_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算赏金"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_01"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_8"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:text=""
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_01"
                        android:layout_alignBaseline="@+id/tv_number_01"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:layout_toRightOf="@+id/tv_number_01"
                        android:text="份"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/dp_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llayout_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_38"
                    android:layout_toRightOf="@+id/llayout_01"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="锁定赏金"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_02"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_8"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:text=""
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_02"
                        android:layout_alignBaseline="@+id/tv_number_02"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:layout_toRightOf="@+id/tv_number_02"
                        android:text="份"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/dp_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llayout_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_38"
                    android:layout_toRightOf="@+id/llayout_02"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余赏金"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_03"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_8"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:text=""
                        android:textColor="@color/_333"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_03"
                        android:layout_alignBaseline="@+id/tv_number_03"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:layout_toRightOf="@+id/tv_number_03"
                        android:text="份"
                        android:textColor="@color/_333"
                        android:textSize="@dimen/dp_10" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_refund"
                    android:layout_width="@dimen/dp_71"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_17"
                    android:background="@drawable/bg_trans_gray"
                    android:gravity="center"
                    android:text="退款"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#FFF6F6F6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="已接单人"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_2_5"
                android:background="#FFECECEC" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <TextView
                    android:id="@+id/pushtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="暂无人接单"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcy_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
