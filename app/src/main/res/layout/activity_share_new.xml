<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:progressDrawable="@drawable/pg_progress"
        android:visibility="gone" />


    <com.github.lzyzsd.jsbridge.BridgeWebView
        android:id="@+id/mshareWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_115">

    </com.github.lzyzsd.jsbridge.BridgeWebView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_135"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_share_white">

        <TextView
            android:id="@+id/share_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="分享给好友"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/share_people"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bwx_shareTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_8"
                android:drawableTop="@mipmap/weix_sicon"
                android:gravity="center"
                android:text="微信好友" />

            <TextView
                android:id="@+id/bpyq_shareTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_8"
                android:drawableTop="@mipmap/pyq_sicon"
                android:gravity="center"
                android:text="朋友圈" />

            <TextView
                android:id="@+id/balc_shareTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_8"
                android:drawableTop="@mipmap/share_photo_lan"
                android:gravity="center"
                android:text="保存到相册" />


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/bfinish_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_54"
        app:srcCompat="@mipmap/share_xx" />


</FrameLayout>