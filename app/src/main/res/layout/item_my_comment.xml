<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/bmy_commentRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_my_comment">
    <FrameLayout
        android:id="@+id/item_comment_headFl"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15">



    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/item_comment_headimg"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        />

        <ImageView
            android:id="@+id/item_comment_isv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/head_is_v20_20"
            android:layout_gravity="right|bottom"
            android:visibility="gone"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/item_comment_nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_comment_headFl"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_19"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/vip_info_color"
        />

    <TextView
        android:id="@+id/item_comment_timetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/text_color_search"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/item_comment_shieldtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_comment_nametv"
        android:layout_alignLeft="@+id/item_comment_nametv"
        android:layout_marginTop="@dimen/dp_4"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/king_color"
        />




    <TextView
        android:id="@+id/item_commenttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_comment_shieldtv"
        android:text="你好"
        android:maxLines="2"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_color_1"
        android:layout_below="@+id/item_comment_nametv"
        android:layout_marginTop="@dimen/dp_4"
        />
    <RelativeLayout
        android:id="@+id/item_commentRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_commenttv"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/bg_color_gray_F6F6F6"
        >

        <TextView
            android:id="@+id/item_comment_replytv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:maxLines="2"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_color_1"
            />

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_0_5"
    android:layout_below="@+id/item_commentRl"
    android:background="@color/line_color"
    />
    </RelativeLayout>

</RelativeLayout>