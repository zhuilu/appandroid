<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="详情可增加首页排名，广告宣传信息将被下架！"
                android:textSize="14sp"
                android:textColor="#999999"/>

            <FrameLayout
                android:id="@+id/release_offer"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/img_release_need" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_item_enter"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img2"
                        android:layout_toRightOf="@id/img1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="我提供" />

                        <TextView
                            android:id="@+id/tv_provide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/offer_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_provide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="#F5F5F5"
                    android:gravity="top"
                    android:hint="1.企鹊桥社群+pc+app用户数量10万+，主要为北上广深杭企业商务人士/总监/CEO\n2.由北上广深4000家企业总监/CEO联合发起的商务合作蓝皮书，可帮助企业曝光，对接合作资源\n3.1200方高端会议场地，10-200人之间均适用"
                    android:textColorHint="#BBBBBB"
                    android:minHeight="@dimen/dp_90"
                    android:padding="@dimen/dp_16"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/provide_pic_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <View style="@style/l_hor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                android:id="@+id/release_need">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/img_release_offer" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_item_enter"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img4"
                        android:layout_toRightOf="@id/img3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="我需要" />

                        <TextView
                            android:id="@+id/tv_need"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/need_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_need"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="#F5F5F5"
                    android:gravity="top"
                    android:hint="1.职场，创业者，商务用户流量，有这方面流量资源的boss欢迎沟通。\n2.线下活动曝光机会，经常举办活动的可以联系，我们可以赞助，及联合邀约等合作形式。\n3.北上深杭有咖啡厅，孵化器资源的企业负责人欢迎沟通。"
                    android:textColorHint="#BBBBBB"
                    android:minHeight="@dimen/dp_90"
                    android:padding="@dimen/dp_16"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/need_pic_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/l_hor" />

            <FrameLayout
                android:id="@+id/mode_fl"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/release_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/img_release_mode" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_item_enter"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img6"
                        android:layout_toRightOf="@id/img5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="合作方式" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/backStep"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/common_bg2"
            android:gravity="center"
            android:padding="10dp"
            android:text="上一步"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/nextStep"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/common_bg2"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>