<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color_gray_F6F6F6"
    >

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/chevron"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="道具商城"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_color_1"
            />
        

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/tool_bar"
        >
    
    <RelativeLayout
        android:id="@+id/btop_cardRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            app:srcCompat="@mipmap/refrsh_card"
            />

        <ImageView
            android:id="@+id/topgoto_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/goto_new"
            android:layout_marginRight="@dimen/dp_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/top_img"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/topgoto_img"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                android:layout_centerVertical="true"
                android:text="刷新卡"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_3"
                android:text="一键刷新，加速获取合作伙伴"
                android:textColor="@color/text_color_AA"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_color"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>

    <RelativeLayout
        android:id="@+id/bsuper_showRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:background="@color/white">

        <ImageView
            android:id="@+id/supershow_img"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            app:srcCompat="@mipmap/top_card"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/supershow_gotoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/goto_new"
            android:layout_marginRight="@dimen/dp_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/supershow_img"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/supershow_gotoimg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                android:layout_centerVertical="true"
                android:text="置顶卡"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:text="优质资源，置顶一天"
                android:textColor="@color/text_color_AA"
                android:layout_marginTop="@dimen/dp_3"
                />
        </LinearLayout>

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
        <RelativeLayout
            android:id="@+id/bcarding_showRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71"
            android:background="@color/white">

            <ImageView
                android:id="@+id/cardingshow_img"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                app:srcCompat="@mipmap/carding_card"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <ImageView
                android:id="@+id/cardingshow_gotoimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/goto_new"
                android:layout_marginRight="@dimen/dp_12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cardingshow_img"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toLeftOf="@+id/cardingshow_gotoimg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/text_color_1"
                    android:layout_centerVertical="true"
                    android:text="专业梳理卡"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:text="合作信息人工梳理，快速通过审核"
                    android:textColor="@color/text_color_AA"
                    android:layout_marginTop="@dimen/dp_3"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>

    <RelativeLayout
        android:id="@+id/blx_limitRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:background="@color/white">

        <ImageView
            android:id="@+id/lx_limitimg"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            app:srcCompat="@mipmap/dataplus"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <ImageView
            android:id="@+id/lx_limit_gotoimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/goto_new"
            android:layout_marginRight="@dimen/dp_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lx_limitimg"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/lx_limit_gotoimg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/text_color_1"
                android:layout_centerVertical="true"
                android:text="沟通权限加油包"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:text="仅限SVIP用户可购买"
                android:textColor="@color/text_color_AA"
                android:layout_marginTop="@dimen/dp_3"
                />
        </LinearLayout>



    </RelativeLayout>

    </LinearLayout>








</RelativeLayout>