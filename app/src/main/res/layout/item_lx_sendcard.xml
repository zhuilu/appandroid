<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/mpositionRl"
        android:layout_width="@dimen/dp_215"
        android:layout_height="@dimen/dp_83"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >
    <RelativeLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63">
        <com.xinniu.android.qiqueqiao.widget.CircleImageView
            android:id="@+id/mcard_circleimg"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mcard_circleimg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/mcard_nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/king_color"
                android:layout_marginRight="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/mcard_positiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mcard_nametv"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_10"
                />
        </RelativeLayout>
        
        
        
    </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color"
            android:layout_below="@id/card_content"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="个人名片"
            android:textSize="@dimen/sp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/_999"
            />
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>