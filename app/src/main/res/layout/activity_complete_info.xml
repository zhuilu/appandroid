<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bcominfo_finishImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chevron"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_36"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bcominfo_finishImg"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:id="@+id/accountpsw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完善信息"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/sp_17"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        />

    <com.xinniu.android.qiqueqiao.widget.CircleImageView
        android:id="@+id/bcominfo_circleimg"
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_94"
        android:layout_below="@id/accountpsw_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@mipmap/ic_default_head"
        />

    <TextView
        android:id="@+id/upheadtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bcominfo_circleimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="上传头像"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/_666"
        />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upheadtv"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_14"
        android:text="真实姓名"
        android:textColor="@color/_666"
        android:layout_marginLeft="@dimen/dp_30"
        />





    <EditText
        android:id="@+id/mcominfo_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@null"
        android:textSize="@dimen/sp_15"
        android:hint="请输入"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@id/mcominfo_name_et"
        android:layout_marginTop="@dimen/dp_18"

        />
    <TextView
        android:id="@+id/companyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_14"
        android:text="公司名称"
        android:textColor="@color/_666"
        android:layout_marginLeft="@dimen/dp_30"
        />


            <TextView
                android:id="@+id/mcominfo_company_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companyTv"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="请选择"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_color_1"
                android:drawableRight="@mipmap/goto_new"
                android:textStyle="bold"
                />
    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@id/mcominfo_company_et"
        android:layout_marginTop="@dimen/dp_18"
        />
    <TextView
        android:id="@+id/positionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line1"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_14"
        android:text="职位"
        android:textColor="@color/_666"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <EditText
        android:id="@+id/mcominfo_position_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/positionTv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@null"
        android:textSize="@dimen/sp_15"
        android:hint="请输入"
        android:maxLines="1"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:maxLength="6"
        />
    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@id/mcominfo_position_et"
        android:layout_marginTop="@dimen/dp_18"
        />

    <TextView
        android:id="@+id/bcominfo_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="完成"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:background="@drawable/bg_login_rec"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_below="@id/view_line2"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_80"
        />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>