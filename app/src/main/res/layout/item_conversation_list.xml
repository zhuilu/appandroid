<com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipe_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/care_tv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#2DA0FB"
            android:text="关注"
            android:gravity="center"/>
        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#FE4646"
            android:text="删除"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rc_item_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/rc_item1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp">

            <ImageView
                android:id="@+id/rc_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                 />

            <FrameLayout
                android:id="@+id/rc_unread_view_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rc_unread_message_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/rc_unread_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </FrameLayout>
        </FrameLayout>

        <!--<TextView-->
            <!--android:id="@+id/comy_tv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="测试"-->
            <!--android:layout_toRightOf="@+id/rc_item1"/>-->

        <LinearLayout
            android:id="@+id/rc_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/rc_item2"
            android:layout_toRightOf="@+id/rc_item1"
            android:background="@android:color/transparent" />

        <FrameLayout
            android:id="@+id/rc_item2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/rc_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />

            <FrameLayout
                android:id="@+id/rc_unread_view_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rc_unread_message_icon_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/rc_unread_message_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </FrameLayout>

        </FrameLayout>

    </RelativeLayout>

</com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout>