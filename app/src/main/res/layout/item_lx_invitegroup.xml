<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mpositionRl"
        android:layout_width="@dimen/dp_215"
        android:layout_height="@dimen/dp_97"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >
        <RelativeLayout
            android:id="@+id/card_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63">


           <com.xinniu.android.qiqueqiao.utils.RoundImageView
               android:id="@+id/item_invite_head"
               android:layout_width="@dimen/dp_42"
               android:layout_height="@dimen/dp_42"
               android:layout_centerVertical="true"
               android:scaleType="fitXY"
               android:layout_marginLeft="@dimen/dp_10"
               />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_invite_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/item_invite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请你加入群组"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_color_1"
                />

                <TextView
                    android:id="@+id/item_invite_groupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/_999"
                    android:textSize="@dimen/sp_10"
                    />

            </LinearLayout>

        </RelativeLayout>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/card_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="查看资料"
                android:textSize="@dimen/sp_13"
                android:layout_centerInParent="true"
                android:textColor="@color/_999"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>