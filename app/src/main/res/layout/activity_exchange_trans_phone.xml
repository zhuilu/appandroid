<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f6f6"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mpublish_titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="交易对方"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:text="完成"
            android:textColor="#ff4b96f3"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_below="@+id/tool_bar"
        android:background="#ffececec" />

    <com.xinniu.android.qiqueqiao.customs.ClearEditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white"
        android:singleLine="true"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="请输入对方手机号"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_5"
        android:textColor="@color/_444"
        android:textColorHint="#ffbbbbbb"
        android:textSize="@dimen/sp_13" />
</LinearLayout>
