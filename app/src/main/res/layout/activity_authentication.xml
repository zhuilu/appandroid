<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/chevron" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="加V认证"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_15" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_alignParentBottom="true"
            android:background="#ffececec" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_151"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_14"
        android:scaleType="fitXY"
        android:src="@mipmap/smreb" />

    <LinearLayout
        android:id="@+id/llayout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            android:drawableLeft="@mipmap/smre"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"
            android:text="实名认证"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_re">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_status_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证通过"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_19"
            android:drawableLeft="@mipmap/zyrz"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"
            android:text="职业身份认证"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_re">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_status_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未认证"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14sp"
                />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_rz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp_54"
        android:layout_marginBottom="@dimen/dp_108"
        android:src="@mipmap/rz"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
