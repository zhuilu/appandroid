<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_21"
    android:background="@drawable/bg_comment_control">

    <com.xinniu.android.qiqueqiao.utils.RoundImageView
        android:id="@+id/img_poster"
        android:layout_width="@dimen/dp_109"
        android:layout_height="@dimen/dp_77"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toRightOf="@+id/img_poster"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_5"
        android:maxLines="2"
        android:singleLine="false"
        android:text="提供微信销售渠道，其他小程序商城提供微信销售渠道"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_13" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_alignBottom="@+id/img_poster"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@+id/img_poster">

        <TextView
            android:id="@+id/tv_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_gray_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:gravity="center"
            android:maxLength="5"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/_666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_tag_1"
            android:background="@drawable/bg_gray_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="5"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/_666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_tag_2"
            android:background="@drawable/bg_gray_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLength="5"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/_666"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</RelativeLayout>