<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_marginTop="@dimen/top_margin"
        >
        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/chevron"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群组公告"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:id="@+id/beditTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/groupRl"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_70"
       android:layout_below="@+id/tool_bar"
       >

       <com.xinniu.android.qiqueqiao.widget.CircleImageView
           android:id="@+id/groupheadImg"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_40"
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/dp_15"
           android:src="@mipmap/home_avatar_placeholder"
           />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/groupheadImg"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_centerVertical="true"
           android:layout_marginRight="@dimen/dp_15"
           >
           
           <TextView
               android:id="@+id/mmemberName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_color_1"
               android:textSize="@dimen/sp_14"
               android:text="企鹊桥"
               />
           <TextView
               android:id="@+id/mmemberPostion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/mmemberName"
               android:text=" · 客户经理"
               android:textSize="@dimen/sp_14"
               android:textColor="@color/text_color_AA"
               />
           <TextView
               android:id="@+id/mgroupTimetv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/mmemberName"
               android:layout_marginTop="@dimen/dp_4"
               android:textSize="@dimen/sp_12"
               android:textColor="@color/text_color_AA"
               android:text="2017-11-11 12:12"
               android:maxLines="1"
               />



       </RelativeLayout>





   </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/tool_bar"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/groupRl"
        />
    <RelativeLayout
        android:id="@+id/explainRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/meditTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅限群主/管理员可编辑"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_color_AA"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/groupintroRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_below="@+id/line2"
        android:layout_above="@+id/explainRl"
        >

        <TextView
            android:id="@+id/mgroupNoticeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            />


    </RelativeLayout>









</RelativeLayout>