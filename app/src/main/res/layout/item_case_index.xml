<?xml version="1.0" encoding="utf-8"?>
<com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_126"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_126"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="85dp"
            android:layout_height="@dimen/dp_126"
            android:background="#FE4646"
            android:text="删除"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlayout_root"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="@dimen/dp_126">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_171"
            android:layout_height="@dimen/dp_96"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="专业Logo设计，公司标志设计，全套VI设计"
            android:textColor="@color/_444"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="@dimen/sp_13"
            />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_gravity="bottom"
        android:background="#ffececec" />
</com.xinniu.android.qiqueqiao.widget.SwipeMenuLayout>
