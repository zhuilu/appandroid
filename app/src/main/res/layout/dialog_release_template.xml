<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">


        <LinearLayout
            android:id="@+id/timeRl"
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_472"
            android:background="@drawable/bg_timeshape_dialog"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_19"
                        android:layout_marginRight="@dimen/dp_19"
                        android:layout_marginTop="@dimen/dp_14"
                        android:lineSpacingExtra="3dp"
                        android:text="企鹊桥 | 提供100万以上商务用户APP流量资源，寻求100万以上职场"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/coop_moffer_contentLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_31"
                            android:src="@mipmap/offer_icon" />

                        <TextView
                            android:id="@+id/moffer_titletv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text="所属行业类型："
                            android:textColor="#ff555555"
                            android:textSize="@dimen/sp_12" />


                        <com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout
                            android:id="@+id/coop_moffer_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_6"

                            >

                        </com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout>

                        <TextView
                            android:id="@+id/coop_moffer_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="合作详情："
                            android:textColor="#ff555555"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/moffer_contenttitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:lineSpacingExtra="@dimen/sp_8"
                            android:textColor="@color/text_color_5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/coop_moffer_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:lineSpacingExtra="@dimen/sp_8"
                            android:textColor="@color/text_color_5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coop_mneed_contentLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_20"
                            android:src="@mipmap/need_icon" />

                        <TextView
                            android:id="@+id/mneed_titletv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_12"
                            android:text="所属行业类型："
                            android:textColor="#ff555555"
                            android:textSize="@dimen/sp_12" />

                        <com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout
                            android:id="@+id/coop_mneed_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_6">

                        </com.xinniu.android.qiqueqiao.customs.label.TagFlowLayout>

                        <TextView
                            android:id="@+id/coop_mneed_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="合作详情："
                            android:textColor="#ff555555"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/mneed_contenttitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:lineSpacingExtra="@dimen/sp_8"
                            android:textColor="@color/text_color_5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/coop_mneed_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_marginTop="@dimen/dp_8"
                            android:lineSpacingExtra="@dimen/sp_8"
                            android:textColor="@color/text_color_5"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>


        <ImageView
            android:id="@+id/bfinishImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeRl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@mipmap/close_tuisong_1" />


    </RelativeLayout>


</RelativeLayout>