<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_my_wallet"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlauout_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_top_height"
            android:layout_alignParentTop="true"

            >

            <RelativeLayout
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_bar_height"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:paddingRight="@dimen/padding_left_and_right">

                <ImageView
                    android:id="@+id/bt_return"
                    android:layout_width="@dimen/tool_bar_head_long"
                    android:layout_height="@dimen/tool_bar_head_long"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_title_back" />

                <TextView
                    android:id="@+id/tool_bar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="钱包"
                    android:textColor="@color/tool_bar_text_color"
                    android:textSize="@dimen/tool_bar_text_size" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlauout_top"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:text="当前余额"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_38" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cash_withdrawal"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@+id/tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"

            android:background="@drawable/bg_wallet_tixian"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:drawableLeft="@mipmap/bill"
            android:drawablePadding="@dimen/dp_16"
            android:text="我的账单"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/goto_new_t" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:background="#ffededed" />

    <RelativeLayout
        android:id="@+id/rlayout_discount_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:drawableLeft="@mipmap/discount_record"
            android:drawablePadding="@dimen/dp_16"
            android:text="提现记录"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/goto_new_t" />


    </RelativeLayout>
</LinearLayout>
