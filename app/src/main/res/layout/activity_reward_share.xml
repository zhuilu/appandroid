<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <ScrollView
        android:id="@+id/mshareWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_above="@+id/ll_bottom">

        <RelativeLayout
            android:id="@+id/rlayout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14">

            <RelativeLayout
                android:id="@+id/llayout_root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:background="@drawable/bg_share_reward">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/bg_share_reward">

                        <LinearLayout
                            android:id="@+id/ll_mine_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_18"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_10">


                                <com.xinniu.android.qiqueqiao.widget.CircleImageView
                                    android:id="@+id/image_head"
                                    android:layout_width="@dimen/dp_52"
                                    android:layout_height="@dimen/dp_52"
                                    android:src="@mipmap/head_new_icon" />

                                <ImageView
                                    android:id="@+id/mimage_isv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|bottom"
                                    app:srcCompat="@mipmap/head_is_v56_56"
                                    android:visibility="visible" />


                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_mine_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:text=""
                                        android:textColor="@color/_333"
                                        android:textSize="@dimen/sp_17"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/mine_vipImg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical" />


                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_mine_position"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:text=""
                                    android:textColor="@color/_333"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:id="@+id/view_01"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_2_5"
                            android:layout_below="@+id/ll_mine_info"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="#FFE5E5E5" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_01"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_17"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/dp_3"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:background="@mipmap/mask_reward" />

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_01"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="详情说明："
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_14"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:maxLines="4"
                            android:textColor="@color/_333"
                            android:textSize="@dimen/sp_14" />


                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_below="@+id/tv_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_11"
                            android:background="@drawable/bg_reward_gray"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_10"
                                app:srcCompat="@mipmap/reward" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:text="赏金"
                                android:textColor="@color/_333"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_11"
                                android:text="￥"
                                android:textColor="@color/_333"
                                android:textSize="@dimen/sp_10" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp_16"
                                android:text=""
                                android:textColor="@color/_333"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll"
                            android:background="@mipmap/mask_reward" />

                        <RelativeLayout
                            android:id="@+id/rlayout_bottom_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_02">

                            <TextView
                                android:id="@+id/tv_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:layout_marginTop="@dimen/dp_32"
                                android:text="【长按识别二维码】"
                                android:textColor="#ff444444"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_biaoyu_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_01"
                                android:layout_marginLeft="@dimen/dp_23"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="扫一扫 立即领取赏金"
                                android:textColor="@color/_333"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:id="@+id/img_ma"
                                android:layout_width="@dimen/dp_81"
                                android:layout_height="@dimen/dp_81"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginRight="@dimen/dp_27"
                                android:layout_marginBottom="@dimen/dp_12" />


                        </RelativeLayout>
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/reward_share_title" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="分享给好友"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bwx_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/weix_sicon"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="微信好友" />

                <TextView
                    android:id="@+id/bpyq_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/pyq_sicon"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="朋友圈" />

                <TextView
                    android:id="@+id/balc_shareTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_photo_lan"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="保存到相册" />


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bfinish_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_14"
        app:srcCompat="@mipmap/classroom_close" />


</RelativeLayout>