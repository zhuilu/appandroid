<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/llayout_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125">

        <com.xinniu.android.qiqueqiao.utils.RoundImageView
            android:id="@+id/mindex_actone_img"
            android:layout_width="@dimen/dp_149"
            android:layout_height="@dimen/dp_90"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            app:srcCompat="@mipmap/activity_status"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mindex_act_onetitletv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/mindex_actone_img"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mindex_act_onetitletv"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/mindex_actone_img">

            <TextView
                android:id="@+id/mindex_act_oneplacetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/activity_address"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/mindex_act_onetimetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_toRightOf="@+id/mindex_act_oneplacetv"
                android:drawableLeft="@mipmap/activity_time"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_12"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_19"
            android:layout_toRightOf="@+id/mindex_actone_img">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/_999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/img_status_bm"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_activity_start"
                android:gravity="center"
                android:text="立即报名"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#FFDBDBDB" />
</LinearLayout>