<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3F3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right">

        <RelativeLayout
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/tool_bar_head_long"
                android:layout_height="@dimen/tool_bar_head_long"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/chevron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="悬赏订单"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/tool_bar_text_size" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="1111111111"
        android:textColor="@color/_333"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_trans_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:text=""
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="#ff777777"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_gray"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="取消接单"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_05"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_organe"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="申请详情"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_02"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_gray"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="申请客服介入"
                android:textColor="@color/_333"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="私聊联系"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_trans_blue"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="同意取消"
                android:textColor="@color/blue_bg_4B96F3"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_trans_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_12">

            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/item_lx_headimg"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:src="@mipmap/head_new_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@+id/item_lx_headimg">

                <TextView
                    android:id="@+id/lx_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="服务经理"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_13" />


                <TextView
                    android:id="@+id/lx_positiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lx_nametv"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="#ff777777"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_2_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#FFE8E8E8" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_26"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="悬赏找人发碍丁俊晖别想虽胃中呆加顺困..."
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:background="@drawable/bg_reward_gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    app:srcCompat="@mipmap/reward" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="赏金"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:text="￥"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="188"
                    android:textColor="@color/_333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_38"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:text="悬赏详情>"
                android:textColor="#ff4b96f3"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
