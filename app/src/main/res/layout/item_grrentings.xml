<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlayout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine_control_1">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"

            android:background="@drawable/select_greets"
            android:button="@null"
            android:checked="true"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_toRightOf="@+id/check"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="11111111111111111"
            android:textColor="@color/_333"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_2_5"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ffe4e4e4" />
</LinearLayout>
