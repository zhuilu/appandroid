<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bbindp_finishImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/chevron"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_36"
        />

    <TextView
        android:id="@+id/accountpsw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定手机号"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/sp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_below="@+id/bbindp_finishImg"
        />

    <EditText
        android:id="@+id/mbindp_account_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountpsw_title"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@null"
        android:textSize="@dimen/sp_15"
        android:hint="请输入手机号码"
        android:maxLines="1"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@+id/mbindp_account_et"
        android:layout_marginTop="@dimen/dp_10"
        />



    <RelativeLayout
        android:id="@+id/yzmRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        >
        <EditText
            android:id="@+id/mbindp_yz_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/bresgit_yzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/bg_yzm"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@+id/yzmRl"
        android:layout_marginTop="@dimen/dp_6"
        />


    <TextView
        android:id="@+id/bbindp_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="完成"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:background="@drawable/bg_login_rec"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@+id/view_line_1"
        android:layout_marginTop="@dimen/dp_108"
        />







</RelativeLayout>