<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/tool_bar_height"
            android:layout_height="@dimen/tool_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_left_xx"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_17"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="保存"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorPrimary"
            />


    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/_eee"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            
            <com.xinniu.android.qiqueqiao.widget.CircleImageView
                android:id="@+id/image_head"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_69"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@mipmap/circle_avatar_placeholder"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改头像"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/_666"
                />

            <RelativeLayout
                android:id="@+id/bll_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"
                    />
                <TextView
                    android:id="@+id/mtv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nametv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="5"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/goto_new"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bll_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <TextView
                    android:id="@+id/phonetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"

                    />
                <TextView
                    android:id="@+id/mtv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phonetv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="11"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/goto_new"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bll_weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <TextView
                    android:id="@+id/wechattv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"
                    />
                <TextView
                    android:id="@+id/mtv_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wechattv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/goto_new"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bll_company_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <TextView
                    android:id="@+id/companytv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"
                    />
                <TextView
                    android:id="@+id/mtv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/companytv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/goto_new"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bll_position"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_85"
                >
                <TextView
                    android:id="@+id/positiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/_666"
                    />
                <TextView
                    android:id="@+id/mtv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/positiontv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color_1"
                    android:hint="请输入"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/goto_new"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>











        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>