<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#88000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listRoot"
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="4"
            android:id="@+id/viewll">
            <TextView
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="清除勾选"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="12sp"
                android:textColor="@drawable/selector_index_item_head_text"
                android:background="@drawable/selector_index_item_head_bg"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/offerTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="提供资源"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textColor="@drawable/selector_index_item_head_text"
                android:background="@drawable/selector_index_item_head_bg"/>
            <TextView
                android:id="@+id/needTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="需要资源"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textColor="@drawable/selector_index_item_head_text"
                android:background="@drawable/selector_index_item_head_bg"/>
            <TextView
                android:id="@+id/offerAndNeedTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="供求都有"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textColor="@drawable/selector_index_item_head_text"
                android:background="@drawable/selector_index_item_head_bg"/>
        </LinearLayout>
        <ListView
            android:layout_below="@id/viewll"
            android:id="@+id/leftListView"
            android:layout_above="@+id/tvSubmit"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:layout_width="@dimen/dp_94"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
        <ListView
            android:layout_below="@id/viewll"
            android:id="@+id/rightListView"
            android:scrollbars="none"
            android:dividerHeight="0dp"
            android:layout_above="@+id/tvSubmit"
            android:divider="@android:color/transparent"
            android:layout_toRightOf="@+id/leftListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tvSubmit"
            android:text="确定"
            android:layout_above="@+id/space"
            style="@style/CommonBtn2"/>
        <Space
            android:id="@+id/space"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>