<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/bresgist_finishImg"
        >


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chevron"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        />
    </LinearLayout>


    <TextView
        android:id="@+id/resgist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bresgist_finishImg"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_36"
        android:text="@string/phone_login"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/text_color_1"
        />
    
    
    <EditText
        android:id="@+id/mresgist_account_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resgist_title"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@null"
        android:textSize="@dimen/sp_15"
        android:hint="请输入手机号码"
        android:maxLines="1"
        android:inputType="phone"
        android:digits="1234567890"
        android:maxLength="11"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@id/mresgist_account_et"
        android:layout_marginTop="@dimen/dp_10"
        />



    <RelativeLayout
        android:id="@+id/yzmRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@id/view_line"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        >

        <TextView
            android:id="@+id/bresgit_yzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/bg_yzm"
            android:textColor="@color/white"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/mresgist_yz_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bresgit_yzm"
            android:maxLength="6"
            android:digits="1234567890"
            android:inputType="phone"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_text_gray_65"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@id/yzmRl"
        android:layout_marginTop="@dimen/dp_6"
        />



    <TextView
        android:id="@+id/brsgister_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="登录"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:background="@drawable/bg_login_rec"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_below="@id/view_line_1"
        android:layout_marginTop="@dimen/dp_108"
        />

















</RelativeLayout>