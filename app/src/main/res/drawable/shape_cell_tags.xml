            <solid android:color="#ff4b96f3"/>
            <corners android:radius="@dimen/dp_2"/>
            <padding android:bottom="@dimen/dp_5" android:top="@dimen/dp_5" android:left="@dimen/dp_10" android:right="@dimen/dp_10"/>

